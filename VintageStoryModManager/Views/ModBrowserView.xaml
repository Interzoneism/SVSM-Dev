<UserControl x:Class="VintageStoryModManager.Views.ModBrowserView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:VintageStoryModManager.Converters"
             xmlns:vm="clr-namespace:VintageStoryModManager.ViewModels"
             xmlns:views="clr-namespace:VintageStoryModManager.Views"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200"
             Background="{DynamicResource Brush.Panel.Primary.Background.Solid}"
             Loaded="OnLoaded">

    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
        <converters:NullToVisibilityConverter x:Key="NullToVisibility"/>
        <converters:SelectedToBorderBrushConverter x:Key="SelectedToBorder"/>
        <converters:EqualityConverter x:Key="EqualityConverter"/>
        <converters:CountToVisibilityConverter x:Key="CountToVisibility"/>
        <converters:ContainsConverter x:Key="ContainsConverter"/>
        <converters:BooleanToBrushConverter x:Key="BoolToBrush"/>
        <converters:IconKeyToGeometryConverter x:Key="IconKeyToGeometry"/>
        <converters:NoResultsVisibilityConverter x:Key="NoResultsVisibility"/>
        <converters:FavoriteButtonVisibilityConverter x:Key="FavoriteButtonVisibility"/>

        <!-- Loading Spinner Animation -->
        <Storyboard x:Key="SpinnerAnimation" RepeatBehavior="Forever">
            <DoubleAnimation
                Storyboard.TargetName="LoadingSpinner"
                Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                From="0" To="360"
                Duration="0:0:1"/>
        </Storyboard>

        <!-- Icon Path Styles using DarkVsTheme -->
        <Style x:Key="IconSmall" TargetType="Path">
            <Setter Property="Width" Value="12"/>
            <Setter Property="Height" Value="12"/>
            <Setter Property="Stretch" Value="Uniform"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Fill" Value="{DynamicResource Brush.Text.Subtle}"/>
        </Style>

        <Style x:Key="IconSmallSubtle" TargetType="Path">
            <Setter Property="Width" Value="12"/>
            <Setter Property="Height" Value="12"/>
            <Setter Property="Stretch" Value="Uniform"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Fill" Value="{DynamicResource Brush.Text.Subtle}"/>
            <Setter Property="Opacity" Value="0.6"/>
            <Setter Property="Margin" Value="0,0,4,0"/>
        </Style>

        <Style x:Key="IconMedium" TargetType="Path">
            <Setter Property="Width" Value="14"/>
            <Setter Property="Height" Value="14"/>
            <Setter Property="Stretch" Value="Uniform"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Fill" Value="{DynamicResource Brush.Text.Primary}"/>
        </Style>

        <Style x:Key="IconLarge" TargetType="Path">
            <Setter Property="Width" Value="16"/>
            <Setter Property="Height" Value="16"/>
            <Setter Property="Stretch" Value="Uniform"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Fill" Value="{DynamicResource Brush.Text.Primary}"/>
        </Style>

        <!-- Mod Card Style using DarkVsTheme -->
        <Style x:Key="ModCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource Brush.ModCard.Background.Active}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Brush.Border.Default}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="ClipToBounds" Value="True"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource Brush.Button.Primary.Background.Hover}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Filter Bar -->
        <Border Grid.Row="1"
                Background="{DynamicResource Brush.Panel.Secondary.Background.Solid}"
                Padding="16,8"
                BorderBrush="{DynamicResource Brush.Border.Default}"
                BorderThickness="0,0,0,1">
            <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <!-- Text Filter -->
                <TextBox Width="160" Height="32"
                         Margin="4"
                         Text="{Binding TextFilter, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource IMM.SearchTextBoxStyle}"
                         ui:ControlHelper.PlaceholderText="Search..."/>

                <!-- Order By Dropdown -->
                <ComboBox Width="160" Height="32"
                          Margin="4,4,0,4"
                          ItemsSource="{Binding OrderByOptions, Mode=OneTime}"
                          SelectedValue="{Binding OrderBy}"
                          SelectedValuePath="Key">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Path Data="{Binding Icon, Converter={StaticResource IconKeyToGeometry}}" 
                                      Fill="{DynamicResource Brush.Text.Subtle}" 
                                      Width="12" Height="12" Stretch="Uniform"
                                      VerticalAlignment="Center" Margin="0,0,6,0"/>
                                <TextBlock Text="{Binding Display}" VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <!-- Order Direction Toggle -->
                <Button Width="32" Height="32"
                        Margin="2,4,4,4"
                        Style="{StaticResource IconButtonStyle}"
                        Command="{Binding ToggleOrderDirectionCommand}"
                        ToolTip="Toggle sort direction">
                    <Grid>
                        <Path Data="{StaticResource IconChevronDown}" 
                              Fill="{DynamicResource Brush.Text.Primary}" 
                              Width="10" Height="10" Stretch="Uniform">
                            <Path.Style>
                                <Style TargetType="Path">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding OrderByDirection}" Value="asc">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Path.Style>
                        </Path>
                        <Path Data="{StaticResource IconChevronUp}" 
                              Fill="{DynamicResource Brush.Text.Primary}" 
                              Width="16" Height="16" Stretch="Uniform">
                            <Path.Style>
                                <Style TargetType="Path">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding OrderByDirection}" Value="asc">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Path.Style>
                        </Path>
                    </Grid>
                </Button>

                <!-- Versions Filter using custom multi-select -->
                <views:MultiSelectDropdown Width="160" Height="32"
                                           Margin="4"
                                           ItemsSource="{Binding AvailableVersions}"
                                           SelectedItems="{Binding SelectedVersions}"
                                           DisplayMemberPath="Name"
                                           PlaceholderText="Versions"
                                           ToolTip="Select game versions to filter"/>

                <!-- Tags Filter using custom multi-select -->
                <views:MultiSelectDropdown Width="120" Height="32"
                                           Margin="4"
                                           ItemsSource="{Binding AvailableTags}"
                                           SelectedItems="{Binding SelectedTags}"
                                           DisplayMemberPath="Name"
                                           PlaceholderText="Tags"
                                           ToolTip="Select tags to filter"/>

                <!-- Side Filter -->
                <ComboBox Width="120" Height="32"
                          Margin="4"
                          SelectedValue="{Binding SelectedSide}"
                          SelectedValuePath="Key"
                          DisplayMemberPath="Value"
                          ItemsSource="{Binding SideOptions, Mode=OneTime}"/>

                <!-- Installed Filter -->
                <ComboBox Width="120" Height="32"
                          Margin="4"
                          SelectedValue="{Binding SelectedInstalledFilter}"
                          SelectedValuePath="Key"
                          DisplayMemberPath="Value"
                          ItemsSource="{Binding InstalledFilterOptions, Mode=OneTime}"/>

                <!-- Favorites Toggle -->
                <Button Width="32" Height="32"
                        Margin="4"
                        Command="{Binding ToggleFavoriteFilterCommand}"
                        ToolTip="Show only favorites"
                        Style="{StaticResource IconButtonStyle}">
                    <Path Data="{StaticResource IconStarSolid}"
                          Width="16" Height="16" Stretch="Uniform" VerticalAlignment="Center">
                        <Path.Style>
                            <Style TargetType="Path">
                                <Setter Property="Fill" Value="{DynamicResource Brush.Text.Subtle}"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding OnlyFavorites}" Value="True">
                                        <Setter Property="Fill" Value="#FBBF24"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Path.Style>
                    </Path>
                </Button>

                <!-- Clear Filters -->
                <Button Width="32" Height="32"
                        Margin="4"
                        Style="{StaticResource IconButtonStyle}"
                        Command="{Binding ClearFiltersCommand}"
                        ToolTip="Clear all filters">
                    <Path Data="{StaticResource IconXCircle}" 
                          Style="{StaticResource IconLarge}"/>
                </Button>
                <Button Width="32" Height="32" Margin="4"
                            Style="{StaticResource IconButtonStyle}"
                            Command="{Binding SearchModsCommand}"
                            IsEnabled="{Binding IsSearching, ConverterParameter=invert, Converter={StaticResource BoolToVisibility}}"
                            ToolTip="Refresh">
                    <Path Data="{StaticResource IconRefresh}" 
                              Style="{StaticResource IconLarge}"/>
                </Button>
                <Button Width="32" Margin="4" Height="32" Click="ScrollToTop_Click" ToolTip="Scroll to top"  Style="{StaticResource IconButtonStyle}">
                    
                        <Path Data="{StaticResource IconArrowToTop}" 
              Style="{StaticResource IconMedium}"/>

                    
                </Button>
            </WrapPanel>
        </Border>

        <!-- Mod Grid -->
        <ScrollViewer Grid.Row="2"
                      x:Name="ModsScrollViewer"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      ScrollChanged="ModsScrollViewer_ScrollChanged">
            <Grid>
                <!-- Loading Indicator -->
                <StackPanel Visibility="{Binding IsSearching, Converter={StaticResource BoolToVisibility}}"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    <!-- Loading Spinner Circle -->
                    <Border Width="48" Height="48"
                            x:Name="LoadingSpinner"
                            RenderTransformOrigin="0.5,0.5">
                        <Border.RenderTransform>
                            <RotateTransform Angle="0"/>
                        </Border.RenderTransform>
                        <Ellipse Width="48" Height="48"
                                 Stroke="{DynamicResource Brush.Accent.Primary}"
                                 StrokeThickness="4"
                                 StrokeDashArray="3 2"
                                 StrokeEndLineCap="Round"/>
                    </Border>
                    <TextBlock Text="Loading mods..."
                               FontSize="14"
                               Foreground="{DynamicResource Brush.Text.Subtle}"
                               TextAlignment="Center"
                               Margin="0,12,0,0"/>
                </StackPanel>

                <!-- No Results -->
                <TextBlock Text="No mods match your filters"
                           FontSize="18"
                           Foreground="{DynamicResource Brush.Text.Subtle}"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center">
                    <TextBlock.Visibility>
                        <MultiBinding Converter="{StaticResource NoResultsVisibility}">
                            <Binding Path="IsSearching"/>
                            <Binding Path="ModsList.Count"/>
                        </MultiBinding>
                    </TextBlock.Visibility>
                </TextBlock>

                <!-- Mods Grid -->
                <ItemsControl ItemsSource="{Binding VisibleMods}"
                              Margin="16"
                              Visibility="{Binding ModsList.Count, Converter={StaticResource CountToVisibility}}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"
                                       HorizontalAlignment="Center"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border x:Name="ModCardBorder"
                                    Style="{StaticResource ModCardStyle}"
                                    Width="288"
                                    Margin="8">
                                <Border.Tag>
                                    <Binding Path="ModId"/>
                                </Border.Tag>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <!-- Mod Image -->
                                    <Border Grid.Row="0" Height="192" CornerRadius="8,8,0,0" ClipToBounds="True">
                                        <Grid>
                                            <Image Source="{Binding LogoUrl}"
                                                   Stretch="UniformToFill"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   ClipToBounds="True"/>

                                            <!-- Overlay Buttons -->
                                            <StackPanel Orientation="Horizontal"
                                                        HorizontalAlignment="Left"
                                                        VerticalAlignment="Top"
                                                        Margin="8">
                                                <Button Width="28" Height="28"
                                                        Opacity="0.9"
                                                        Click="FavoriteButton_Click"
                                                        Tag="{Binding ModId}"
                                                        ToolTip="Toggle favorite"
                                                        Style="{StaticResource IconButtonStyle}">
                                                    <Button.Visibility>
                                                        <MultiBinding Converter="{StaticResource FavoriteButtonVisibility}">
                                                            <Binding Path="IsMouseOver" ElementName="ModCardBorder"/>
                                                            <Binding Path="ModId"/>
                                                            <Binding Path="DataContext.FavoriteMods" RelativeSource="{RelativeSource AncestorType=UserControl}"/>
                                                        </MultiBinding>
                                                    </Button.Visibility>
                                                    <Path Data="{StaticResource IconStarSolid}"
                                                          Width="14" Height="14" Stretch="Uniform" VerticalAlignment="Center">
                                                        <Path.Style>
                                                            <Style TargetType="Path">
                                                                <Setter Property="Fill" Value="{DynamicResource Brush.Text.Subtle}"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Value="True">
                                                                        <DataTrigger.Binding>
                                                                            <MultiBinding Converter="{StaticResource ContainsConverter}">
                                                                                <Binding Path="ModId"/>
                                                                                <Binding Path="DataContext.FavoriteMods" RelativeSource="{RelativeSource AncestorType=UserControl}"/>
                                                                            </MultiBinding>
                                                                        </DataTrigger.Binding>
                                                                        <Setter Property="Fill" Value="#FBBF24"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Path.Style>
                                                    </Path>
                                                </Button>
                                            </StackPanel>
                                        </Grid>
                                    </Border>

                                    <!-- Mod Info -->
                                    <Grid Grid.Row="1" Height="96">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Title & Description (now on left) -->
                                        <StackPanel Grid.Column="0" Margin="8">
                                            <!-- MaxWidth: Card=288 - StatsColumn(80+16)=96 - Separator=1 - Margins=16 = 175 -->
                                            <StackPanel Orientation="Horizontal" MaxWidth="175">
                                                <!-- MaxWidth: 175 - LinkIcon(10+4margin) = 161 -->
                                                <TextBlock Foreground="{DynamicResource Brush.Text.Primary}"
                                                           FontWeight="Bold"
                                                           FontSize="14"
                                                           TextTrimming="CharacterEllipsis"
                                                           MaxWidth="161"
                                                           Cursor="Hand"
                                                           MouseLeftButtonDown="OpenInBrowserTitle_Click"
                                                           Tag="{Binding AssetId}"
                                                           ToolTip="Open in browser">
                                                    <TextBlock.Text>
                                                        <Binding Path="Name"/>
                                                    </TextBlock.Text>
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Style.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter Property="TextDecorations" Value="Underline"/>
                                                                </Trigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                                <Path Data="{StaticResource IconLinkAlt}" 
                                                      Width="10" Height="10" Stretch="Uniform"
                                                      Fill="{DynamicResource Brush.Text.Subtle}"
                                                      VerticalAlignment="Center"
                                                      Margin="4,0,0,0"/>
                                            </StackPanel>
                                            <TextBlock Text="{Binding Summary}"
                                                       Foreground="{DynamicResource Brush.Text.Subtle}"
                                                       FontSize="12"
                                                       TextWrapping="Wrap"
                                                       MaxHeight="60"
                                                       TextTrimming="CharacterEllipsis"/>
                                        </StackPanel>

                                        <!-- Separator -->
                                        <Border Grid.Column="0"
                                                Width="1"
                                                Background="{DynamicResource Brush.Border.Default}"
                                                HorizontalAlignment="Right"/>

                                        <!-- Stats (now on right) -->
                                        <StackPanel Grid.Column="1"
                                                    Margin="8"
                                                    Width="80">
                                            <StackPanel Orientation="Horizontal" Margin="0,2">
                                                <Path Data="{StaticResource IconUser}" 
                                                      Style="{StaticResource IconSmallSubtle}"/>
                                                <!-- MaxWidth: StatsWidth=80 - Icon(12+4margin) = 64 -->
                                                <TextBlock Text="{Binding Author}"
                                                           Foreground="{DynamicResource Brush.Text.Primary}"
                                                           FontSize="12"
                                                           MaxWidth="64"
                                                           TextTrimming="CharacterEllipsis"/>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal" Margin="0,2">
                                                <Path Data="{StaticResource IconDownload}" 
                                                      Style="{StaticResource IconSmallSubtle}"/>
                                                <TextBlock Text="{Binding FormattedDownloads}"
                                                           Foreground="{DynamicResource Brush.Text.Primary}"
                                                           FontSize="12"/>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal" Margin="0,2">
                                                <Path Data="{StaticResource IconHeartSolid}" 
                                                      Style="{StaticResource IconSmallSubtle}"/>
                                                <TextBlock Text="{Binding FormattedFollows}"
                                                           Foreground="{DynamicResource Brush.Text.Primary}"
                                                           FontSize="12"/>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal" Margin="0,2">
                                                <Path Data="{StaticResource IconMessage}" 
                                                      Style="{StaticResource IconSmallSubtle}"/>
                                                <TextBlock Text="{Binding FormattedComments}"
                                                           Foreground="{DynamicResource Brush.Text.Primary}"
                                                           FontSize="12"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>
