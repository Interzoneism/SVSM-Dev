<UserControl x:Class="VintageStoryModManager.Views.ModBrowserView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:VintageStoryModManager.Converters"
             xmlns:vm="clr-namespace:VintageStoryModManager.ViewModels"
             xmlns:views="clr-namespace:VintageStoryModManager.Views"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             xmlns:design="clr-namespace:VintageStoryModManager.Design"
             mc:Ignorable="d"
             d:DesignHeight="786" d:DesignWidth="1311"
             d:DataContext="{d:DesignInstance Type={x:Type design:ModBrowserViewDesignData}, IsDesignTimeCreatable=True}"
             Background="{DynamicResource Brush.Panel.Primary.Background.Solid}"
             Loaded="OnViewLoaded">

    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
        <converters:InvertBooleanConverter x:Key="InvertBoolean"/>
        <converters:NullToVisibilityConverter x:Key="NullToVisibility"/>
        <converters:SelectedToBorderBrushConverter x:Key="SelectedToBorder"/>
        <converters:EqualityConverter x:Key="EqualityConverter"/>
        <converters:CountToVisibilityConverter x:Key="CountToVisibility"/>
        <converters:ContainsConverter x:Key="ContainsConverter"/>
        <converters:BooleanToBrushConverter x:Key="BoolToBrush"/>
        <converters:IconKeyToGeometryConverter x:Key="IconKeyToGeometry"/>
        <converters:NoResultsVisibilityConverter x:Key="NoResultsVisibility"/>
        <converters:FavoriteButtonVisibilityConverter x:Key="FavoriteButtonVisibility"/>
        <converters:InstallButtonVisibilityConverter x:Key="InstallButtonVisibility"/>

        <!-- Loading Spinner Animation -->
        <Storyboard x:Key="SpinnerAnimation" RepeatBehavior="Forever">
            <DoubleAnimation
                Storyboard.TargetName="LoadingSpinner"
                Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                From="0" To="360"
                Duration="0:0:1"/>
        </Storyboard>

        <!-- Icon Path Styles using DarkVsTheme -->
        <Style x:Key="IconSmall" TargetType="Path">
            <Setter Property="Width" Value="12"/>
            <Setter Property="Height" Value="12"/>
            <Setter Property="Stretch" Value="Uniform"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Fill" Value="{DynamicResource Brush.Text.Subtle}"/>
        </Style>

        <Style x:Key="IconSmallSubtle" TargetType="Path">
            <Setter Property="Width" Value="12"/>
            <Setter Property="Height" Value="12"/>
            <Setter Property="Stretch" Value="Uniform"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Fill" Value="{DynamicResource Brush.Text.Subtle}"/>
            <Setter Property="Opacity" Value="0.6"/>
            <Setter Property="Margin" Value="0,0,4,0"/>
        </Style>

        <Style x:Key="IconMedium" TargetType="Path">
            <Setter Property="Width" Value="14"/>
            <Setter Property="Height" Value="14"/>
            <Setter Property="Stretch" Value="Uniform"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Fill" Value="{DynamicResource Brush.Text.Primary}"/>
        </Style>

        <Style x:Key="IconLarge" TargetType="Path">
            <Setter Property="Width" Value="16"/>
            <Setter Property="Height" Value="16"/>
            <Setter Property="Stretch" Value="Uniform"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Fill" Value="{DynamicResource Brush.Text.Primary}"/>
        </Style>

        <!-- Mod Card Style using DarkVsTheme -->
        <Style x:Key="ModCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource Brush.DataGrid.Header.Background}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Brush.Button.Bevel.Dark}"/>
            <Setter Property="BorderThickness" Value="0,0,2,2"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="UseLayoutRounding" Value="True"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="ClipToBounds" Value="True"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource Brush.Button.Primary.Background.Hover}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Filter Bar -->
        <Border
                Background="{DynamicResource Brush.MiddleTab.Background.Selected}"
                Padding="10,0,10,0"
                BorderBrush="{DynamicResource Brush.Border.Default}"
                BorderThickness="0,0,0,1" Margin="0,16,0,4">
            <Grid UseLayoutRounding="False">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <WrapPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="8,0,0,0">
                    <TextBox Width="200" Height="32"
                                Text="{Binding TextFilter, UpdateSourceTrigger=PropertyChanged}"
                                Style="{StaticResource IMM.SearchTextBoxStyle}"
                                ui:ControlHelper.PlaceholderText="Search..." UseLayoutRounding="True" Margin="0,0,4,0" Padding="3,0,0,0"/>
                    <ComboBox Width="160" Height="32"
                                ItemsSource="{Binding OrderByOptions, Mode=OneTime}"
                                SelectedValue="{Binding OrderBy}"
                                SelectedValuePath="Key" Margin="4,0,4,0" VerticalContentAlignment="Center" UseLayoutRounding="True">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Path Data="{Binding Icon, Converter={StaticResource IconKeyToGeometry}}" 
                                                Fill="{DynamicResource Brush.Text.Subtle}" 
                                                Width="12" Height="12" Stretch="Uniform"
                                                VerticalAlignment="Center" Margin="0,0,6,0"/>
                                    <TextBlock Text="{Binding Display}" VerticalAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <!-- Versions Filter using custom multi-select -->
                    <views:MultiSelectDropdown Width="160" Height="32"
                            Margin="4"
                            ItemsSource="{Binding AvailableVersions}"
                            SelectedItems="{Binding SelectedVersions}"
                            DisplayMemberPath="Name"
                            PlaceholderText="Versions"
                            ToolTip="Select game versions to filter"
                            SelectionChanged="VersionsDropdown_SelectionChanged" UseLayoutRounding="True"/>

                    <!-- Tags Filter using custom multi-select -->
                    <views:MultiSelectDropdown Width="120" Height="32"
                            Margin="4"
                            ItemsSource="{Binding AvailableTags}"
                            SelectedItems="{Binding SelectedTags}"
                            DisplayMemberPath="Name"
                            PlaceholderText="Tags"
                            ToolTip="Select tags to filter"
                            SelectionChanged="TagsDropdown_SelectionChanged" UseLayoutRounding="True"/>

                    <!-- Side Filter -->
                    <ComboBox Width="120" Height="32"
                            Margin="4"
                            SelectedValue="{Binding SelectedSide}"
                            SelectedValuePath="Key"
                            DisplayMemberPath="Value"
                            ItemsSource="{Binding SideOptions, Mode=OneTime}" UseLayoutRounding="True" VerticalContentAlignment="Center"/>

                    <!-- Installed Filter -->
                    <ComboBox Width="150" Height="32"
                            Margin="4"
                            SelectedValue="{Binding SelectedInstalledFilter}"
                            SelectedValuePath="Key"
                            DisplayMemberPath="Value"
                            ItemsSource="{Binding InstalledFilterOptions, Mode=OneTime}" UseLayoutRounding="True" VerticalContentAlignment="Center"/>
                    <Button Width="32" Height="32"
                                Style="{StaticResource IconButtonStyle}"
                                Command="{Binding ToggleOrderDirectionCommand}"
                                ToolTip="Toggle sort direction" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Padding="0,0,0,0" Margin="4,0,4,0" UseLayoutRounding="True">
                        <Grid>
                            <Path Data="{StaticResource IconChevronDown}" 
                                        Fill="{DynamicResource Brush.Text.Primary}" 
                                        Width="12" Height="12" Stretch="Uniform">
                                <Path.Style>
                                    <Style TargetType="{x:Type Path}">
                                        <Setter Property="Visibility" Value="Visible"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding OrderByDirection}" Value="asc">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Path.Style>
                            </Path>
                            <Path Data="{StaticResource IconChevronUp}" 
                                        Fill="{DynamicResource Brush.Text.Primary}" 
                                        Width="12" Height="12" Stretch="Uniform">
                                <Path.Style>
                                    <Style TargetType="{x:Type Path}">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding OrderByDirection}" Value="asc">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Path.Style>
                            </Path>
                        </Grid>
                    </Button>

                    <!-- Clear Filters -->
                    <Button Width="32" Height="32"
                            Margin="4"
                            Style="{StaticResource IconButtonStyle}"
                            Command="{Binding ClearFiltersCommand}"
                            ToolTip="Clear all filters" UseLayoutRounding="True">
                        <Path Data="{StaticResource IconXCircle}" 
                                Style="{StaticResource IconLarge}"/>
                    </Button>
                </WrapPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Bottom" Margin="0,0,8,4">
                    <Button Width="32" Height="32"
                                Command="{Binding ToggleFavoriteFilterCommand}"
                                ToolTip="Show only favorites"
                                Style="{StaticResource IconButtonStyle}" Margin="0,0,4,0" UseLayoutRounding="True">
                        <Path Data="{StaticResource IconStarSolid}"
                                    Width="16" Height="16" Stretch="Uniform" VerticalAlignment="Center">
                            <Path.Style>
                                <Style TargetType="{x:Type Path}">
                                    <Setter Property="Fill" Value="{DynamicResource Brush.Text.Subtle}"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding OnlyFavorites}" Value="True">
                                            <Setter Property="Fill" Value="#FBBF24"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Path.Style>
                        </Path>
                    </Button>

                    <Button Width="32"
                        Style="{StaticResource IconButtonStyle}"
                        Command="{Binding SearchModsCommand}"
                        IsEnabled="{Binding IsSearching, Converter={StaticResource InvertBoolean}}"
                        ToolTip="Refresh" HorizontalContentAlignment="Center" Height="32" Margin="4,0,4,0" UseLayoutRounding="True">
                        <Path Data="{StaticResource IconRefresh}" 
                            Style="{StaticResource IconLarge}"/>
                    </Button>
                    <Button Width="32" Height="32" Click="ScrollToTop_Click" ToolTip="Scroll to top"  Style="{StaticResource IconButtonStyle}" Margin="4,0,0,0" UseLayoutRounding="True">

                        <Path Data="{StaticResource IconArrowToTop}" 
                                Style="{StaticResource IconMedium}"/>


                    </Button>
                </StackPanel>
            </Grid>
        </Border>
        <Border Grid.Row="1" CornerRadius="12,12,12,12" Background="{DynamicResource Brush.DataGrid.Background}" Margin="16,0,16,0"
                      >
            <ScrollViewer
                x:Name="ModsScrollViewer"
                VerticalScrollBarVisibility="Auto"
                HorizontalScrollBarVisibility="Disabled"
                ScrollChanged="ModsScrollViewer_ScrollChanged">
                <Grid>
                    <!-- Loading Indicator -->
                    <StackPanel Visibility="{Binding IsSearching, Converter={StaticResource BoolToVisibility}}"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                        <!-- Loading Spinner Circle -->
                        <Border Width="48" Height="48"
                            x:Name="LoadingSpinner"
                            RenderTransformOrigin="0.5,0.5">
                            <Border.RenderTransform>
                                <RotateTransform Angle="0"/>
                            </Border.RenderTransform>
                            <Ellipse Width="48" Height="48"
                                Stroke="{DynamicResource Brush.Accent.Primary}"
                                StrokeThickness="4"
                                StrokeDashArray="3 2"
                                StrokeEndLineCap="Round"/>
                        </Border>
                        <TextBlock Text="Loading mods..."
                            FontSize="14"
                            Foreground="{DynamicResource Brush.Text.Subtle}"
                            TextAlignment="Center"
                            Margin="0,12,0,0"/>
                    </StackPanel>

                    <!-- No Results -->
                    <TextBlock Text="No mods match your filters"
                        FontSize="18"
                        Foreground="{DynamicResource Brush.Text.Subtle}"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                        <TextBlock.Visibility>
                            <MultiBinding Converter="{StaticResource NoResultsVisibility}">
                                <Binding Path="IsSearching"/>
                                <Binding Path="ModsList.Count"/>
                            </MultiBinding>
                        </TextBlock.Visibility>
                    </TextBlock>

                    <!-- Mods Grid -->
                    <ItemsControl ItemsSource="{Binding VisibleMods}"
                        Margin="16,0,16,16"
                        Visibility="{Binding ModsList.Count, Converter={StaticResource CountToVisibility}}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"
                                    HorizontalAlignment="Center"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border x:Name="ModCardBorder"
                                    Style="{StaticResource ModCardStyle}"
                                    Width="288"
                                    
                                    Margin="8" Tag="{Binding ModId}">
                                    <Border CornerRadius="8" ClipToBounds="True">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>

                                            <!-- Mod Image -->
                                            <Border Grid.Row="0" Height="192" CornerRadius="8,8,0,0" ClipToBounds="True">
                                                <Border.Background>
                                                    <ImageBrush ImageSource="{Binding LogoUrl}"
                                                        Stretch="UniformToFill"
                                                        AlignmentX="Center"
                                                        AlignmentY="Center"/>
                                                </Border.Background>

                                                <!-- Overlay Buttons -->
                                                <Grid>
                                                    <!-- Favorite button on top left -->
                                                    <StackPanel Orientation="Horizontal"
                                                        HorizontalAlignment="Left"
                                                        VerticalAlignment="Top"
                                                        Margin="8">
                                                        <Button Width="28" Height="28"
                                                            Opacity="0.9"
                                                            Click="FavoriteButton_Click"
                                                            Tag="{Binding ModId}"
                                                            ToolTip="Toggle favorite"
                                                            Style="{StaticResource IconButtonStyle}">
                                                            <Button.Visibility>
                                                                <MultiBinding Converter="{StaticResource FavoriteButtonVisibility}">
                                                                    <Binding Path="IsMouseOver" ElementName="ModCardBorder"/>
                                                                    <Binding Path="ModId"/>
                                                                    <Binding Path="DataContext.FavoriteMods" RelativeSource="{RelativeSource AncestorType={x:Type UserControl}}"/>
                                                                </MultiBinding>
                                                            </Button.Visibility>
                                                            <Path Data="{StaticResource IconStarSolid}"
                                                                Width="14" Height="14" Stretch="Uniform" VerticalAlignment="Center">
                                                                <Path.Style>
                                                                    <Style TargetType="{x:Type Path}">
                                                                        <Setter Property="Fill" Value="{DynamicResource Brush.Text.Subtle}"/>
                                                                        <Style.Triggers>
                                                                            <DataTrigger Value="True">
                                                                                <DataTrigger.Binding>
                                                                                    <MultiBinding Converter="{StaticResource ContainsConverter}">
                                                                                        <Binding Path="ModId"/>
                                                                                        <Binding Path="DataContext.FavoriteMods" RelativeSource="{RelativeSource AncestorType={x:Type UserControl}}"/>
                                                                                    </MultiBinding>
                                                                                </DataTrigger.Binding>
                                                                                <Setter Property="Fill" Value="#FBBF24"/>
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </Path.Style>
                                                            </Path>
                                                        </Button>
                                                    </StackPanel>

                                                    <!-- Install button on top right -->
                                                    <StackPanel Orientation="Horizontal"
                                                        HorizontalAlignment="Right"
                                                        VerticalAlignment="Top"
                                                        Margin="8">
                                                        <Button Width="28" Height="28"
                                                            Opacity="0.9"
                                                            Click="InstallButton_Click"
                                                            Tag="{Binding ModId}"
                                                            ToolTip="Install mod"
                                                            Style="{StaticResource IconButtonStyle}"
                                                            IsEnabled="{Binding IsInstalled, Converter={StaticResource InvertBoolean}}">
                                                            <Button.Visibility>
                                                                <MultiBinding Converter="{StaticResource InstallButtonVisibility}">
                                                                    <Binding Path="IsMouseOver" ElementName="ModCardBorder"/>
                                                                    <Binding Path="IsInstalled"/>
                                                                </MultiBinding>
                                                            </Button.Visibility>
                                                            <Path Width="14" Height="14" Stretch="Uniform" VerticalAlignment="Center"
                                                                Data="{StaticResource IconDownload}">
                                                                <Path.Style>
                                                                    <Style TargetType="{x:Type Path}">
                                                                        <Setter Property="Fill" Value="{DynamicResource Brush.Text.Subtle}"/>
                                                                        <Style.Triggers>
                                                                            <!-- Show checkmark when installed -->
                                                                            <DataTrigger Value="True" Binding="{Binding IsInstalled}">
                                                                                <Setter Property="Data" Value="{StaticResource IconCheck}"/>
                                                                                <Setter Property="Fill" Value="{DynamicResource Brush.Status.Success}"/>
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </Path.Style>
                                                            </Path>
                                                        </Button>
                                                    </StackPanel>

                                                    <!-- User report summary on bottom right -->
                                                    <Border HorizontalAlignment="Right"
                                                        VerticalAlignment="Bottom"
                                                        Margin="8"
                                                        Padding="6,4"
                                                        Background="{DynamicResource Brush.Panel.Secondary.Background.Solid}"
                                                        CornerRadius="6"
                                                        Visibility="Visible">
                                                        <TextBlock Text="{Binding UserReportDisplay}"
                                                            ToolTip="{Binding UserReportTooltip}"
                                                            Foreground="{DynamicResource Brush.Text.Primary}"
                                                            FontWeight="SemiBold"
                                                            FontSize="12"
                                                            TextTrimming="CharacterEllipsis"/>
                                                    </Border>
                                                </Grid>
                                            </Border>

                                            <!-- Mod Info -->
                                            <Grid Grid.Row="1" Height="96">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- Title & Description -->
                                                <StackPanel Grid.Column="0" Margin="8">
                                                    <!-- MaxWidth: Card=288 - StatsColumn(80+16)=96 - Separator=1 - Margins=16 = 175 -->
                                                    <StackPanel Orientation="Horizontal" MaxWidth="175">
                                                        <!-- MaxWidth: 175 - LinkIcon(10+4margin) = 161 -->
                                                        <TextBlock Foreground="{DynamicResource Brush.Text.Primary}"
                                                            FontWeight="Bold"
                                                            FontSize="14"
                                                            TextTrimming="CharacterEllipsis"
                                                            MaxWidth="161"
                                                            Cursor="Hand"
                                                            MouseLeftButtonDown="OpenInBrowserTitle_Click"
                                                            Tag="{Binding AssetId}"
                                                            ToolTip="Open in browser" Text="{Binding Name}">
                                                            <TextBlock.Style>
                                                                <Style TargetType="{x:Type TextBlock}">
                                                                    <Style.Triggers>
                                                                        <Trigger Property="IsMouseOver" Value="True">
                                                                            <Setter Property="TextDecorations" Value="Underline"/>
                                                                        </Trigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </TextBlock.Style>
                                                        </TextBlock>
                                                        <Path Data="{StaticResource IconLinkAlt}" 
                                                            Width="10" Height="10" Stretch="Uniform"
                                                            Fill="{DynamicResource Brush.Text.Subtle}"
                                                            VerticalAlignment="Center"
                                                            Margin="4,0,0,0"/>
                                                    </StackPanel>
                                                    <TextBlock Text="{Binding Summary}"
                                                        Foreground="{DynamicResource Brush.Text.Subtle}"
                                                        FontSize="12"
                                                        TextWrapping="Wrap"
                                                        MaxHeight="60"
                                                        TextTrimming="CharacterEllipsis"/>
                                                </StackPanel>

                                                <!-- Separator -->
                                                <Border Grid.Column="0"
                                                    Width="1"
                                                    Background="{DynamicResource Brush.Border.Default}"
                                                    HorizontalAlignment="Right"/>

                                                <!-- Stats (now on right) -->
                                                <StackPanel Grid.Column="1"
                                                    Margin="8"
                                                    Width="80">
                                                    <StackPanel Orientation="Horizontal" Margin="0,2">
                                                        <Path Data="{StaticResource IconUser}" 
                                                            Style="{StaticResource IconSmallSubtle}"/>
                                                        <!-- MaxWidth: StatsWidth=80 - Icon(12+4margin) = 64 -->
                                                        <TextBlock Text="{Binding Author}"
                                                            Foreground="{DynamicResource Brush.Text.Primary}"
                                                            FontSize="12"
                                                            MaxWidth="64"
                                                            TextTrimming="CharacterEllipsis"/>
                                                    </StackPanel>
                                                    <StackPanel Orientation="Horizontal" Margin="0,2">
                                                        <Path Data="{StaticResource IconDownload}" 
                                                            Style="{StaticResource IconSmallSubtle}"/>
                                                        <TextBlock Text="{Binding FormattedDownloads}"
                                                            Foreground="{DynamicResource Brush.Text.Primary}"
                                                            FontSize="12"/>
                                                    </StackPanel>
                                                    <StackPanel Orientation="Horizontal" Margin="0,2">
                                                        <Path Data="{StaticResource IconHeartSolid}" 
                                                            Style="{StaticResource IconSmallSubtle}"/>
                                                        <TextBlock Text="{Binding FormattedFollows}"
                                                            Foreground="{DynamicResource Brush.Text.Primary}"
                                                            FontSize="12"/>
                                                    </StackPanel>
                                                    <StackPanel Orientation="Horizontal" Margin="0,2">
                                                        <Path Data="{StaticResource IconMessage}" 
                                                            Style="{StaticResource IconSmallSubtle}"/>
                                                        <TextBlock Text="{Binding FormattedComments}"
                                                            Foreground="{DynamicResource Brush.Text.Primary}"
                                                            FontSize="12"/>
                                                    </StackPanel>
                                                </StackPanel>
                                            </Grid>
                                        </Grid>
                                    </Border>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </ScrollViewer>
        </Border>

        <!-- Mod Grid -->
    </Grid>
</UserControl>
