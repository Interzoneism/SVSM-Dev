<Window x:Class="VintageStoryModManager.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:design="clr-namespace:VintageStoryModManager.Design"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=design:MainWindowDesignData}"
        Title="Vintage Story Mod Manager"
        Height="640" Width="1100"
        MinWidth="900" MinHeight="520">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" MinHeight="40" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>



        <Menu IsMainMenu="True">
            <MenuItem Header="_File" Height="20">
                <MenuItem Header="_Refresh Mods" Height="20" Click="RefreshModsMenuItem_OnClick" />
                <Separator />
                <MenuItem Header="Set _Data Folder..." Height="20" Click="SelectDataFolderMenuItem_OnClick" />
                <MenuItem Header="Set _Game Folder..." Height="20" Click="SelectGameFolderMenuItem_OnClick" />
                <Separator />
                <MenuItem Header="E_xit" Height="20" Click="ExitMenuItem_OnClick"/>
            </MenuItem>
            <MenuItem Header="_Help" Height="30">
                <MenuItem Header="_About" Height="30" />
            </MenuItem>
        </Menu>





        <DataGrid Grid.Row="1"
                  Margin="16,16,16,16"
                  ItemsSource="{Binding ModsView}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  IsReadOnly="False"
                  EnableRowVirtualization="True"
                  GridLinesVisibility="Horizontal"
                  SelectionUnit="FullRow"
                  SelectionMode="Single"
                  RowHeaderWidth="0"
                  IsSynchronizedWithCurrentItem="True" MinColumnWidth="20"
                  SelectionChanged="ModsDataGrid_OnSelectionChanged" BorderThickness="2,2,2,2">
            <DataGrid.Resources>
                <Style TargetType="TextBlock">
                    <Setter Property="TextWrapping" Value="Wrap" />
                </Style>
                <Style TargetType="DataGridCell">
                    <Setter Property="Background" Value="Transparent" />
                    <Setter Property="BorderBrush" Value="LightSlateGray" />
                    <Setter Property="BorderThickness" Value="0,0,0,0" />
                    <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                </Style>
            </DataGrid.Resources>
            <DataGrid.RowHeaderStyle>
                <Style/>
            </DataGrid.RowHeaderStyle>
            <DataGrid.BorderBrush>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFB9D1EA"/>
                    <GradientStop Color="#FFC8C8C8" Offset="1"/>
                </LinearGradientBrush>
            </DataGrid.BorderBrush>
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="Background" Value="Transparent" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding HasErrors}" Value="True">
                            <Setter Property="Background" Value="#FFFFE5E5" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding HasActivationError}" Value="True">
                            <Setter Property="Background" Value="#22F5D67B" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="Active" SortMemberPath="IsActive" Width="90" MinWidth="85">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Grid HorizontalAlignment="Center">
                                <ui:ToggleSwitch IsOn="{Binding IsActive, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 HorizontalAlignment="Center"
                                 IsEnabled="{Binding CanToggle}"
                                 Margin="20"
                                 OnContent="{x:Null}"
                                 OffContent="{x:Null}"/>
                            </Grid>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="Icon" Width="SizeToCells" IsReadOnly="True">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Border Width="60" Height="60"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    ToolTipService.ShowDuration="60000"
                                    ToolTipService.InitialShowDelay="200">
                                <ToolTipService.ToolTip>
                                    <TextBlock Text="{Binding Tooltip}"
                                               FontFamily="Segoe UI"
                                               FontSize="12"
                                               FontWeight="Normal"
                                               TextWrapping="Wrap" />
                                </ToolTipService.ToolTip>
                                <Image Source="{Binding Icon}" Stretch="Uniform" />
                            </Border>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Name" Binding="{Binding DisplayName}" Width="SizeToCells" SortMemberPath="DisplayName">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="FontFamily" Value="Segoe UI" />
                            <Setter Property="ToolTipService.ShowDuration" Value="60000" />
                            <Setter Property="ToolTipService.InitialShowDelay" Value="200" />
                            <Setter Property="HorizontalAlignment" Value="Stretch" />
                            <Setter Property="VerticalAlignment" Value="Center" />
                            <Setter Property="TextAlignment" Value="Left" />
                            <Setter Property="Margin" Value="15,0,0,0" />
                            <Setter Property="ToolTipService.ToolTip">
                                <Setter.Value>
                                    <TextBlock Text="{Binding Tooltip}"
                                               FontFamily="Segoe UI"
                                               FontSize="12"
                                               FontWeight="Normal"
                                               TextWrapping="Wrap" />
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                    <DataGridTextColumn.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                            <Setter Property="VerticalContentAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.CellStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Version" Binding="{Binding VersionDisplay}" Width="65" IsReadOnly="True" MinWidth="64" />
                <DataGridTextColumn Header="Latest Version" Binding="{Binding LatestDatabaseVersionDisplay}" Width="100" MinWidth="99" IsReadOnly="True" />
                <DataGridTemplateColumn Header="Mod Page" Width="100" IsReadOnly="True">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Padding="4"
                                    BorderThickness="2"
                                    BorderBrush="#FFB9D1EA"
                                    Background="AliceBlue"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    ToolTip="{Binding ModDatabasePageUrlDisplay}"
                                    Click="ModDatabasePageButton_OnClick">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding HasModDatabasePageLink}" Value="True">
                                                <Setter Property="Visibility" Value="Visible" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <Image Source="{Binding ModDatabasePageFavicon}" Width="20" Height="20" Stretch="Uniform">
                                        <Image.Style>
                                            <Style TargetType="Image">
                                                <Setter Property="Visibility" Value="Visible" />
                                                <Style.Triggers>
                                                    <Trigger Property="Source" Value="{x:Null}">
                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Image.Style>
                                    </Image>
                                    <TextBlock Text="ModDB Page" Margin="0,0,0,0" />
                                </StackPanel>
                            </Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Authors" Binding="{Binding AuthorsDisplay}" Width="110" IsReadOnly="True">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextWrapping" Value="Wrap" />
                            <Setter Property="HorizontalAlignment" Value="Stretch" />
                            <Setter Property="VerticalAlignment" Value="Center" />
                            <Setter Property="TextAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                    <DataGridTextColumn.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                            <Setter Property="VerticalContentAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.CellStyle>
                </DataGridTextColumn>
                <DataGridTemplateColumn Header="Status" Width="100" IsReadOnly="True">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock FontFamily="Segoe Fluent Icons"
                                       FontSize="30"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       TextAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="{ui:ThemeResource SystemControlForegroundBaseHighBrush}" />
                                        <Setter Property="Text" Value="" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding StatusText}" Value="Error">
                                                <Setter Property="Foreground" Value="#FFD13438" />
                                                <Setter Property="Text" Value="&#xEA39;" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding StatusText}" Value="Warning">
                                                <Setter Property="Foreground" Value="#FFE17E00" />
                                                <Setter Property="Text" Value="&#xE7BA;" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                    <DataGridTemplateColumn.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="BorderBrush" Value="Transparent" />
                            <Setter Property="BorderThickness" Value="0" />
                            <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                            <Setter Property="ToolTip" Value="{Binding StatusDetails}" />
                        </Style>
                    </DataGridTemplateColumn.CellStyle>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Dependencies" Binding="{Binding DependenciesDisplay}" Width="110" IsReadOnly="True">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextWrapping" Value="Wrap" />
                            <Setter Property="HorizontalAlignment" Value="Stretch" />
                            <Setter Property="VerticalAlignment" Value="Center" />
                            <Setter Property="TextAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                    <DataGridTextColumn.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                            <Setter Property="VerticalContentAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.CellStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Side" Binding="{Binding SideDisplay}" Width="SizeToCells" IsReadOnly="True" />

            </DataGrid.Columns>
        </DataGrid>


        <Grid Grid.Row="2" Margin="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0"
                    Padding="12"
                    Background="{ui:ThemeResource SystemControlBackgroundBaseLowBrush}"
                    VerticalAlignment="Center"
                    Margin="0,0,16,0">
                <TextBlock Text="{Binding StatusMessage}"
                           TextWrapping="Wrap">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="{ui:ThemeResource SystemControlForegroundBaseMediumBrush}" />
                            <Setter Property="Visibility" Value="Collapsed" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding HasStatusMessage}" Value="True">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding IsErrorStatus}" Value="True">
                                    <Setter Property="Foreground" Value="#FFD13438" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Border>

            <StackPanel Grid.Column="1"
                        Orientation="Horizontal"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Right">
                <ComboBox Width="220"
                          Margin="0,0,8,0"
                          ItemsSource="{Binding Presets}"
                          SelectedItem="{Binding SelectedPreset, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                <Button Content="Save Preset"
                        Width="110"
                        Margin="0,0,8,0"
                        Background="#CCFFFFFF"
                        BorderBrush="#7F000000"
                        Click="SavePresetButton_OnClick" />
                <Button Content="Open Logs Folder"
                        Width="146"
                        Margin="0,0,8,0"
                        Background="#CCFFFFFF"
                        BorderBrush="#7F000000"
                        Click="OpenLogsFolderButton_OnClick" />
                <Button Content="Open Config Folder"
                        Width="146"
                        Margin="0,0,8,0"
                        Background="#CCFFFFFF"
                        BorderBrush="#7F000000"
                        Click="OpenConfigFolderButton_OnClick" />
                <Button Content="Open Mod Folder"
                        Width="131"
                        Margin="0,0,8,0"
                        Background="#CCFFFFFF"
                        BorderBrush="#7F000000"
                        Click="OpenModFolderButton_OnClick" />
                <Button Content="Launch Vintage Story"
                        Width="159"
                        Background="#CCFFFFFF"
                        BorderBrush="#7F000000"
                        Click="LaunchGameButton_OnClick" />
            </StackPanel>
        </Grid>
    </Grid>
</Window>
