<Window x:Class="VintageStoryModManager.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:design="clr-namespace:VintageStoryModManager.Design"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=design:MainWindowDesignData}"
        Title="Vintage Story Mod Manager"
        Height="632" Width="1100"
        MinWidth="900" MinHeight="520"
        PreviewKeyDown="Window_OnPreviewKeyDown"
        PreviewKeyUp="Window_OnPreviewKeyUp">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" MinHeight="55" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Menu IsMainMenu="True" Margin="0,6,0,9">
            <MenuItem Header="_File" Height="30">
                <MenuItem Header="_Refresh Mods" Height="30" Click="RefreshModsMenuItem_OnClick" />
                <Separator />
                <MenuItem Header="Set _Data Folder..." Height="30" Click="SelectDataFolderMenuItem_OnClick" />
                <MenuItem Header="Set _Game Folder..." Height="30" Click="SelectGameFolderMenuItem_OnClick" />
                <Separator />
                <MenuItem Header="E_xit" Height="30" Click="ExitMenuItem_OnClick"/>
            </MenuItem>
            <MenuItem Header="_Help" Height="30">
                <MenuItem Header="_About" Height="30" />
            </MenuItem>
        </Menu>

        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding ModsView}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  IsReadOnly="False"
                  EnableRowVirtualization="True"
                  GridLinesVisibility="Horizontal"
                  SelectionUnit="FullRow"
                  SelectionMode="Single"
                  RowHeaderWidth="0"
                  IsSynchronizedWithCurrentItem="True" MinColumnWidth="20"
                  SelectionChanged="ModsDataGrid_OnSelectionChanged" Foreground="Black"
                  PreviewMouseWheel="ModsDataGrid_OnPreviewMouseWheel" BorderThickness="0,1,0,0">
            <DataGrid.Resources>
                <Style TargetType="TextBlock">
                    <Setter Property="TextWrapping" Value="Wrap" />
                </Style>
                <Style TargetType="DataGridCell">
                    <Setter Property="Background" Value="Transparent" />
                    <Setter Property="BorderBrush" Value="LightSlateGray" />
                    <Setter Property="BorderThickness" Value="0,0,0,0" />
                    <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                </Style>
            </DataGrid.Resources>
            <DataGrid.BorderBrush>
                <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ActiveBorderColorKey}}"/>
            </DataGrid.BorderBrush>
            <DataGrid.RowHeaderStyle>
                <Style/>
            </DataGrid.RowHeaderStyle>
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="Background" Value="Transparent" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="DataGridRow">
                                <Border x:Name="RowBorder"
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        SnapsToDevicePixels="True">
                                    <Grid>
                                        <Border x:Name="SelectionOverlay"
                                                Background="#80007AFF"
                                                Visibility="Collapsed"
                                                Opacity="0.4"
                                                IsHitTestVisible="False"
                                                Panel.ZIndex="-1"
                                                HorizontalAlignment="Stretch"
                                                VerticalAlignment="Stretch" />
                                        <SelectiveScrollingGrid>
                                            <SelectiveScrollingGrid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                            </SelectiveScrollingGrid.ColumnDefinitions>
                                            <SelectiveScrollingGrid.RowDefinitions>
                                                <RowDefinition Height="*" />
                                                <RowDefinition Height="Auto" />
                                            </SelectiveScrollingGrid.RowDefinitions>
                                            <DataGridCellsPresenter Grid.Column="0"
                                                                     SelectiveScrollingGrid.SelectiveScrollingOrientation="Both" />
                                            <DataGridDetailsPresenter Grid.Column="0"
                                                                      Grid.Row="1"
                                                                      SelectiveScrollingGrid.SelectiveScrollingOrientation="Horizontal"
                                                                      Visibility="{TemplateBinding DetailsVisibility}" />
                                        </SelectiveScrollingGrid>
                                    </Grid>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="DetailsVisibility" Value="Visible">
                                        <Setter TargetName="RowBorder" Property="BorderThickness" Value="1,0,1,1" />
                                    </Trigger>
                                    <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                        <Setter TargetName="SelectionOverlay" Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <EventSetter Event="PreviewMouseLeftButtonDown" Handler="ModsDataGridRow_OnPreviewMouseLeftButtonDown" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding HasErrors}" Value="True">
                            <Setter Property="Background" Value="#FFFFE5E5" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding HasActivationError}" Value="True">
                            <Setter Property="Background" Value="#22F5D67B" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>
            <DataGrid.Columns>
                <DataGridTemplateColumn x:Name="ActiveColumn" Header="Active" SortMemberPath="IsActive" Width="90" MinWidth="85">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Grid HorizontalAlignment="Center">
                                <ui:ToggleSwitch IsOn="{Binding IsActive, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 HorizontalAlignment="Center"
                                 IsEnabled="{Binding CanToggle}"
                                 Toggled="ActiveToggle_OnToggled"
                                 Margin="20"
                                 OnContent="{x:Null}"
                                 OffContent="{x:Null}"/>
                            </Grid>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="Icon" Width="SizeToCells" IsReadOnly="True">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Border Width="60" Height="60"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    ToolTipService.ShowDuration="60000"
                                    ToolTipService.InitialShowDelay="200">
                                <ToolTipService.ToolTip>
                                    <TextBlock Text="{Binding Tooltip}"
                                               FontFamily="Segoe UI"
                                               FontSize="12"
                                               FontWeight="Normal"
                                               TextWrapping="Wrap" />
                                </ToolTipService.ToolTip>
                                <Image Source="{Binding Icon}" Stretch="Uniform" />
                            </Border>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Name" Binding="{Binding DisplayName}" Width="SizeToCells" SortMemberPath="DisplayName">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="FontFamily" Value="Segoe UI" />
                            <Setter Property="FontWeight" Value="Bold" />
                            <Setter Property="ToolTipService.ShowDuration" Value="60000" />
                            <Setter Property="ToolTipService.InitialShowDelay" Value="200" />
                            <Setter Property="HorizontalAlignment" Value="Stretch" />
                            <Setter Property="VerticalAlignment" Value="Center" />
                            <Setter Property="TextAlignment" Value="Left" />
                            <Setter Property="Margin" Value="15,0,0,0" />
                            <Setter Property="ToolTipService.ToolTip">
                                <Setter.Value>
                                    <TextBlock Text="{Binding Tooltip}"
                                               FontFamily="Segoe UI"
                                               FontSize="12"
                                               FontWeight="Normal"
                                               TextWrapping="Wrap" />
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                    <DataGridTextColumn.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                            <Setter Property="VerticalContentAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.CellStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Version" Binding="{Binding VersionDisplay}" Width="65" IsReadOnly="True" MinWidth="64" />
                <DataGridTextColumn Header="Latest Version" Binding="{Binding LatestDatabaseVersionDisplay}" Width="100" MinWidth="99" IsReadOnly="True" />
                <DataGridTextColumn Header="Authors" Binding="{Binding AuthorsDisplay}" Width="110" IsReadOnly="True">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextWrapping" Value="Wrap" />
                            <Setter Property="HorizontalAlignment" Value="Stretch" />
                            <Setter Property="VerticalAlignment" Value="Center" />
                            <Setter Property="TextAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                    <DataGridTextColumn.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                            <Setter Property="VerticalContentAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.CellStyle>
                </DataGridTextColumn>
                <DataGridTemplateColumn Header="Status" Width="100" IsReadOnly="True" SortMemberPath="StatusSortOrder">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock FontFamily="Segoe Fluent Icons"
                                       FontSize="30"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       TextAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="{ui:ThemeResource SystemControlForegroundBaseHighBrush}" />
                                        <Setter Property="Text" Value="" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding StatusText}" Value="Error">
                                                <Setter Property="Foreground" Value="#FFD13438" />
                                                <Setter Property="Text" Value="&#xEA39;" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding StatusText}" Value="Warning">
                                                <Setter Property="Foreground" Value="#FFE17E00" />
                                                <Setter Property="Text" Value="&#xE7BA;" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                    <DataGridTemplateColumn.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="BorderBrush" Value="Transparent" />
                            <Setter Property="BorderThickness" Value="0" />
                            <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                            <Setter Property="ToolTip" Value="{Binding StatusDetails}" />
                        </Style>
                    </DataGridTemplateColumn.CellStyle>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>


        <Border Grid.Row="2"
                Background="{ui:ThemeResource SystemControlBackgroundBaseLowBrush}"
                Padding="12"
                MinHeight="72">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="12" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="{Binding LoadedModsText}"
                                   VerticalAlignment="Center"
                                   Foreground="{ui:ThemeResource SystemControlForegroundBaseMediumBrush}"
                                   FontWeight="SemiBold" />
                        <TextBox x:Name="ModDescriptionTextBox"
                                 Grid.Column="2"
                                 MinHeight="32"
                                 VerticalAlignment="Center"
                                 Padding="6"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 IsReadOnly="True"
                                 BorderBrush="{ui:ThemeResource SystemControlForegroundBaseMediumBrush}"
                                 Background="#1FFFFFFF"
                                 Foreground="{ui:ThemeResource SystemControlForegroundBaseHighBrush}"
                                 ScrollViewer.VerticalScrollBarVisibility="Auto" />
                    </Grid>

                    <TextBlock Grid.Row="1"
                               Margin="0,8,0,0"
                               Text="{Binding StatusMessage}"
                               TextWrapping="Wrap">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="{ui:ThemeResource SystemControlForegroundBaseMediumBrush}" />
                                <Setter Property="Visibility" Value="Collapsed" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding HasStatusMessage}" Value="True">
                                        <Setter Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding IsErrorStatus}" Value="True">
                                        <Setter Property="Foreground" Value="#FFD13438" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>

                <Button x:Name="ModPageButton"
                        Grid.Column="1"
                        Margin="12,0,0,0"
                        Padding="10,4"
                        Background="#CCFFFFFF"
                        BorderBrush="#7F000000"
                        VerticalAlignment="Center"
                        Visibility="Collapsed"
                        ToolTip="{Binding ModDatabasePageUrlDisplay}"
                        AutomationProperties.Name="Open Mod Database Page"
                        Click="ModDatabasePageButton_OnClick">
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                        <Image Source="/webicon.png"
                               Width="20"
                               Height="20"
                               Stretch="Uniform" />
                        <TextBlock Text="Mod Page" Margin="6,0,0,0" VerticalAlignment="Center" />
                    </StackPanel>
                </Button>

                <Button x:Name="ModConfigButton"
                        Grid.Column="2"
                        Margin="12,0,0,0"
                        Padding="10,4"
                        Background="#CCFFFFFF"
                        BorderBrush="#7F000000"
                        VerticalAlignment="Center"
                        Visibility="Collapsed"
                        Content="Edit Config"
                        AutomationProperties.Name="Edit Config"
                        Click="EditConfigButton_OnClick" />

                <Button x:Name="DeleteModButton"
                        Grid.Column="3"
                        Margin="12,0,0,0"
                        Padding="10,4"
                        Background="#CCFFFFFF"
                        BorderBrush="#7F000000"
                        VerticalAlignment="Center"
                        Visibility="Collapsed"
                        Content="Delete"
                        AutomationProperties.Name="Delete Mod"
                        Click="DeleteModButton_OnClick" />

                <StackPanel Grid.Column="4"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Margin="12,0,0,0">
                    <Button Content="Open Logs Folder"
                            Background="#CCFFFFFF"
                            BorderBrush="#7F000000"
                            Height="32"
                            Click="OpenLogsFolderButton_OnClick" />
                    <Button Content="Open Config Folder"
                            Background="#CCFFFFFF"
                            BorderBrush="#7F000000"
                            Height="32"
                            Margin="8,0,0,0"
                            Click="OpenConfigFolderButton_OnClick" />
                    <Button Content="Open Mods Folder"
                            Background="#CCFFFFFF"
                            BorderBrush="#7F000000"
                            Height="32"
                            Margin="8,0,0,0"
                            Click="OpenModFolderButton_OnClick" />
                    <Button Content="Launch Vintage Story"
                            Background="#CCFFFFFF"
                            BorderBrush="#7F000000"
                            Height="32"
                            Margin="12,0,0,0"
                            FontWeight="Bold"
                            Click="LaunchGameButton_OnClick" />
                    <ComboBox x:Name="PresetComboBox"
                              Width="295"
                              Height="32"
                              Margin="12,0,0,0"
                              VerticalAlignment="Center"
                              DisplayMemberPath="Name"
                              SelectionChanged="PresetComboBox_OnSelectionChanged"
                              DropDownClosed="PresetComboBox_OnDropDownClosed" />
                    <Button x:Name="SavePresetButton"
                            Content="Save Preset"
                            Background="#CCFFFFFF"
                            BorderBrush="#7F000000"
                            Height="32"
                            Margin="8,0,0,0"
                            Click="SavePresetButton_OnClick"
                            MouseEnter="SavePresetButton_OnMouseEnter"
                            MouseLeave="SavePresetButton_OnMouseLeave" />
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
