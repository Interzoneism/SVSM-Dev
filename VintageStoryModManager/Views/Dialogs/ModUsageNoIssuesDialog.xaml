<Window x:Class="VintageStoryModManager.Views.Dialogs.ModUsageNoIssuesDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:ModernWpf.Controls;assembly=ModernWpf.Controls"
        xmlns:viewModels="clr-namespace:VintageStoryModManager.ViewModels"
        Title="Confirm &quot;No issues&quot; votes"
        Height="460"
        Width="600"
        MinHeight="360"
        MinWidth="520"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        ShowInTaskbar="False"
        Background="{DynamicResource Brush.Window.Shell.Background.Solid}">
    <Grid Margin="0,24,0,0"
          Background="{DynamicResource Brush.Panel.Primary.Background.Solid}"
          TextElement.Foreground="{DynamicResource Brush.Text.Primary}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Margin="0,0,0,12"
                   FontSize="18"
                   FontWeight="Bold"
                   Text="Give these mods a &quot;No issues&quot; vote?" />

        <TextBlock Grid.Row="1"
                   Margin="0,0,0,16"
                   TextWrapping="Wrap"
                   Foreground="{DynamicResource Brush.Text.Subtle}">
            Uncheck any mods that you do not want to vote for yet. A vote will be
            submitted with the "No issues" option for every checked mod.
        </TextBlock>

        <ListView x:Name="ModListView"
                  Grid.Row="2"
                  ItemsSource="{Binding Candidates}"
                  BorderThickness="1"
                  BorderBrush="{DynamicResource Brush.Surface.Secondary.Border}"
                  Background="{DynamicResource Brush.Panel.Secondary.Background.Solid}"
                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                  Margin="0,0,0,16">
            <ListView.ItemTemplate>
                <DataTemplate DataType="{x:Type viewModels:ModUsageVoteCandidateViewModel}">
                    <Border Padding="8" BorderThickness="0,0,0,1" BorderBrush="{DynamicResource Brush.Surface.Secondary.Border}">
                        <DockPanel>
                            <controls:ToggleSwitch DockPanel.Dock="Left"
                                                   Margin="0,0,16,0"
                                                   OnContent="Include"
                                                   OffContent="Exclude"
                                                   IsOn="{Binding IsSelected, Mode=TwoWay}" />
                            <StackPanel>
                                <TextBlock FontWeight="SemiBold"
                                           Text="{Binding DisplayLabel}" />
                                <TextBlock Foreground="{DynamicResource Brush.Text.Subtle}"
                                           Margin="0,2,0,0"
                                           Text="{Binding UsageSummary}" />
                            </StackPanel>
                        </DockPanel>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,8,0,0">
            <TextBlock x:Name="StatusTextBlock"
                       VerticalAlignment="Center"
                       Foreground="{DynamicResource Brush.Text.Subtle}"
                       Margin="0,0,16,0" />
            <Button Content="Remind me later"
                    Margin="0,0,8,0"
                    IsCancel="True"
                    Click="CancelButton_OnClick" />
            <Button x:Name="SubmitButton"
                    Content="Submit votes"
                    IsDefault="True"
                    Click="SubmitButton_OnClick" />
        </StackPanel>
    </Grid>
</Window>
