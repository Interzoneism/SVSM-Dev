<Window x:Class="VintageStoryModManager.Views.Dialogs.SaveSnapshotOptionsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Save Options"
        SizeToContent="WidthAndHeight"
        MinWidth="320"
        MinHeight="160"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow"
        ShowInTaskbar="False"
        Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}">
    <Border Padding="20">
        <StackPanel>
            <TextBlock x:Name="HeaderTextBlock"
                       Margin="0,0,0,16"
                       TextWrapping="Wrap"
                       MaxWidth="420" />
            <CheckBox x:Name="IncludeConfigsCheckBox"
                      Content="Include Current Mod Configs"
                      Margin="0,0,0,24" />
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <Button Content="Cancel"
                        Width="88"
                        Margin="0,0,12,0"
                        IsCancel="True"
                        Click="OnCancelClick" />
                <Button Content="Save"
                        Width="88"
                        IsDefault="True"
                        Click="OnSaveClick" />
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
