<Window x:Class="VintageStoryModManager.Views.Dialogs.SelectConfigFileDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Config File"
        Height="320"
        Width="520"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResizeWithGrip"
        SizeToContent="Manual">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Text="Select the configuration file to edit:" FontWeight="SemiBold" />

        <ListBox x:Name="ConfigListBox"
                 Grid.Row="1"
                 Margin="0,8,0,12"
                 ItemsSource="{Binding ConfigPaths}"
                 SelectedItem="{Binding SelectedPath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 MouseDoubleClick="OnConfigListBoxDoubleClick">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}" TextWrapping="Wrap" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Width="80" Margin="0,0,8,0" IsDefault="True" Click="OnOkClick" />
            <Button Content="Cancel" Width="80" IsCancel="True" />
        </StackPanel>
    </Grid>
</Window>
