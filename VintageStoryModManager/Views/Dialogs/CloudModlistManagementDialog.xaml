<Window x:Class="VintageStoryModManager.Views.Dialogs.CloudModlistManagementDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Manage Cloud Modlists"
        SizeToContent="WidthAndHeight"
        MinWidth="520"
        MinHeight="340"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanMinimize"
        WindowStyle="SingleBorderWindow"
        ShowInTaskbar="False"
        Background="{StaticResource Brush.Window.Shell.Background.Solid}">
    <Grid Margin="20"
          Background="{StaticResource Brush.Panel.Primary.Background.Solid}"
          TextElement.Foreground="{StaticResource Brush.Text.Primary}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Text="Select one of your cloud modlists to rename or delete it."
                   Grid.Row="0"
                   Margin="0,0,0,12"
                   TextWrapping="Wrap"
                   FontSize="14" />

        <ListView x:Name="ModlistsListView"
                  Grid.Row="1"
                  MinHeight="220"
                  Width="460"
                  HorizontalAlignment="Stretch"
                  SelectionMode="Single"
                  SelectionChanged="ModlistsListView_OnSelectionChanged"
                  MouseDoubleClick="ModlistsListView_OnMouseDoubleClick"
                  Background="{StaticResource Brush.Panel.Secondary.Background.Solid}"
                  BorderBrush="{StaticResource Brush.Panel.Secondary.Background.Solid}"
                  Foreground="{StaticResource Brush.Text.Primary}">
            <ListView.Resources>
                <Style TargetType="GridViewColumnHeader">
                    <Setter Property="Foreground" Value="{StaticResource Brush.Text.Primary}" />
                    <Setter Property="Background" Value="{StaticResource Brush.Button.Primary.Background.Normal}" />
                    <Setter Property="BorderBrush" Value="{StaticResource Brush.Panel.Secondary.Background.Solid}" />
                </Style>
                <Style TargetType="ListViewItem">
                    <Setter Property="Foreground" Value="{StaticResource Brush.Text.Primary}" />
                </Style>
            </ListView.Resources>
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Slot" DisplayMemberBinding="{Binding SlotLabel}" Width="100" />
                    <GridViewColumn Header="Name" DisplayMemberBinding="{Binding EffectiveName}" Width="240" />
                    <GridViewColumn Header="Version" DisplayMemberBinding="{Binding Version}" Width="100" />
                </GridView>
            </ListView.View>
        </ListView>

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,18,0,0">
            <Button x:Name="RenameButton"
                    Content="Rename"
                    MinWidth="88"
                    Margin="0,0,12,0"
                    Click="RenameButton_OnClick" />
            <Button x:Name="DeleteButton"
                    Content="Delete"
                    MinWidth="88"
                    Margin="0,0,12,0"
                    Background="{StaticResource Brush.Status.Error}"
                    Foreground="{StaticResource Brush.Text.Primary}"
                    Click="DeleteButton_OnClick" />
            <Button Content="Close"
                    MinWidth="88"
                    IsCancel="True" />
        </StackPanel>
    </Grid>
</Window>
