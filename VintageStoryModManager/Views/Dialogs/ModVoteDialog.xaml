<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:models="clr-namespace:VintageStoryModManager.Models"
        xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="av" x:Class="VintageStoryModManager.Views.Dialogs.ModVoteDialog"
        Title="User Reports"
        Height="408"
        MinWidth="650"
        MinHeight="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        ShowInTaskbar="False"
        Background="{DynamicResource Brush.Window.Shell.Background.Solid}" Width="654" MaxWidth="800" MaxHeight="600">
    <Grid Margin="24,24,0,0"
          Background="{DynamicResource Brush.Panel.Primary.Background.Solid}"
          TextElement.Foreground="{DynamicResource Brush.Text.Primary}" Height="340" HorizontalAlignment="Left" Width="606" VerticalAlignment="Top">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0"
                    Margin="0,0,0,12">
            <TextBlock x:Name="TitleTextBlock"
                       FontSize="18"
                       FontWeight="Bold"
                       Text="User reports" />
            <TextBlock x:Name="ModVersionTextBlock"
                       Margin="0,6,0,0"
                       Foreground="{DynamicResource Brush.Text.Subtle}" />
            <TextBlock x:Name="GameVersionTextBlock"
                       Foreground="{DynamicResource Brush.Text.Subtle}" />
        </StackPanel>

        <StackPanel Grid.Row="1"
                    Margin="0,0,0,12">
            <TextBlock
                       TextWrapping="Wrap"
                       Foreground="{DynamicResource Brush.Text.Primary}" Text="Select the option that best describes how this mod works for you.&#xD;&#xA;&#xD;&#xA;" FontSize="18" Height="25" />
            <TextBlock
                TextWrapping="Wrap"
                Foreground="{DynamicResource Brush.Text.Primary}" Text="Each vote is tied to the combination of this mod version and your installed Vintage Story version." Height="17" FontStyle="Italic" />
        </StackPanel>

        <StackPanel Grid.Row="2" HorizontalAlignment="Left" Margin="0,0,0,71" Width="373">
            <Button x:Name="WorkingPerfectlyButton"
                    FontSize="18"
                    Height="32"
                    Margin="0,4,0,0"
                    Style="{StaticResource IMM.UserReportButtonStyle}"
                    Tag="{x:Static models:ModVersionVoteOption.WorkingPerfectly}"
                    Click="VoteButton_OnClick" HorizontalAlignment="Left" Content="Working Fine" HorizontalContentAlignment="Center" />
            <Button x:Name="SomeIssuesButton"
                    FontSize="18"
                    Height="32"
                    Margin="0,4,0,0"
                    Style="{StaticResource IMM.UserReportButtonStyle}"
                    Tag="{x:Static models:ModVersionVoteOption.SomeIssuesButWorks}"
                    Click="VoteButton_OnClick" HorizontalAlignment="Left" Content="Some Issues" HorizontalContentAlignment="Center" />
            <Button x:Name="NotWorkingButton"
                    FontSize="18"
                    Height="32"
                    Style="{StaticResource IMM.UserReportButtonStyle}"
                    Tag="{x:Static models:ModVersionVoteOption.NotWorking}"
                    Click="VoteButton_OnClick" HorizontalAlignment="Left" Content="Not Working" Margin="0,4,0,0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
        </StackPanel>

        <Grid Grid.Row="2" HorizontalAlignment="Right" Width="606" Height="44" VerticalAlignment="Top" Margin="0,162,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />

            </Grid.RowDefinitions>

            <TextBlock x:Name="StatusTextBlock"
                       Grid.Column="0"
                       Foreground="{DynamicResource Brush.Text.Subtle}" Margin="0,8,121,10" TextWrapping="Wrap" />
            <Button
                        Margin="496,8,10,10"
                        Content="Close"
                        IsCancel="True" />
        </Grid>
    </Grid>
</Window>
