<Window x:Class="VintageStoryModManager.Views.Dialogs.SaveInstalledModsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Save Installed Mods"
        SizeToContent="WidthAndHeight"
        MinWidth="560"
        MinHeight="320"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow"
        ShowInTaskbar="False"
        Loaded="Window_OnLoaded"
        Background="{DynamicResource Brush.Window.Shell.Background.Solid}">
    <Grid Margin="20"
          Background="{DynamicResource Brush.Panel.Primary.Background.Solid}"
          TextElement.Foreground="{DynamicResource Brush.Text.Primary}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0"
                   Grid.Column="0"
                   Margin="0,0,12,12"
                   VerticalAlignment="Center"
                   Text="List name:" />
        <TextBox x:Name="NameTextBox"
                 Grid.Row="0"
                 Grid.Column="1"
                 Margin="0,0,0,12"
                 MinWidth="320"
                 TextChanged="NameTextBox_OnTextChanged"
                 Background="{DynamicResource Brush.Dialog.TextBox.Background}"
                 BorderBrush="{DynamicResource Brush.Dialog.TextBox.Border}"
                 SelectionBrush="{DynamicResource Brush.Dialog.TextBox.SelectionBackground}"
                 SelectionTextBrush="{DynamicResource Brush.Dialog.TextBox.SelectionForeground}"
                 CaretBrush="{DynamicResource Brush.Dialog.TextBox.Caret}" />

        <TextBlock Grid.Row="1"
                   Grid.Column="0"
                   Grid.ColumnSpan="2"
                   Margin="0,0,0,6"
                   Text="Description:" />
        <TextBox x:Name="DescriptionTextBox"
                 Grid.Row="2"
                 Grid.Column="0"
                 Grid.ColumnSpan="2"
                 Margin="0,0,0,12"
                 MinHeight="100"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto"
                 Background="{DynamicResource Brush.Dialog.TextBox.Background}"
                 BorderBrush="{DynamicResource Brush.Dialog.TextBox.Border}"
                 SelectionBrush="{DynamicResource Brush.Dialog.TextBox.SelectionBackground}"
                 SelectionTextBrush="{DynamicResource Brush.Dialog.TextBox.SelectionForeground}"
                 CaretBrush="{DynamicResource Brush.Dialog.TextBox.Caret}" />

        <TextBlock Grid.Row="3"
                   Grid.Column="0"
                   Grid.ColumnSpan="2"
                   Margin="0,0,0,6"
                   Text="Config description:" />
        <TextBox x:Name="ConfigDescriptionTextBox"
                 Grid.Row="4"
                 Grid.Column="0"
                 Grid.ColumnSpan="2"
                 MinHeight="100"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto"
                 Background="{DynamicResource Brush.Dialog.TextBox.Background}"
                 BorderBrush="{DynamicResource Brush.Dialog.TextBox.Border}"
                 SelectionBrush="{DynamicResource Brush.Dialog.TextBox.SelectionBackground}"
                 SelectionTextBrush="{DynamicResource Brush.Dialog.TextBox.SelectionForeground}"
                 CaretBrush="{DynamicResource Brush.Dialog.TextBox.Caret}" />

        <StackPanel Grid.Row="5"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,18,0,0">
            <Button x:Name="ConfirmButton"
                    Content="Save"
                    MinWidth="88"
                    Margin="0,0,12,0"
                    IsDefault="True"
                    Click="ConfirmButton_OnClick" />
            <Button Content="Cancel"
                    MinWidth="88"
                    IsCancel="True" />
        </StackPanel>
    </Grid>
</Window>
