<Window x:Class="VintageStoryModManager.Views.Dialogs.ExperimentalCompReviewDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Experimental Compatibility Review"
        Width="760"
        Height="560"
        MinWidth="640"
        MinHeight="480"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        WindowStyle="SingleBorderWindow"
        Background="{StaticResource Window_Background_Brush}">
    <Grid Margin="24"
          Background="{StaticResource Panel_Primary_Background_Brush}"
          TextElement.Foreground="{StaticResource Text_Primary_Brush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Margin="0,0,0,12"
                   TextWrapping="Wrap"
                   FontSize="14">
            Enter a Vintage Story Mod DB slug (for example, <Bold>carryon</Bold>). The latest Vintage Story version is optional and boosts exact matches.
        </TextBlock>

        <Grid Grid.Row="1" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0"
                       Grid.Column="0"
                       Margin="0,0,16,8"
                       VerticalAlignment="Center"
                       FontWeight="Bold"
                       Text="Mod slug" />
            <TextBox x:Name="ModSlugTextBox"
                     Grid.Row="0"
                     Grid.Column="1"
                     MinWidth="320"
                     Margin="0,0,0,8"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Stretch"
                     Background="{StaticResource Dialog_TextBox_Background_Brush}"
                     BorderBrush="{StaticResource Dialog_TextBox_Border_Brush}"
                     SelectionBrush="{StaticResource Dialog_TextBox_Selection_Brush}"
                     SelectionTextBrush="{StaticResource Dialog_TextBox_SelectionText_Brush}"
                     CaretBrush="{StaticResource Dialog_TextBox_Caret_Brush}" />

            <TextBlock Grid.Row="1"
                       Grid.Column="0"
                       Margin="0,0,16,0"
                       VerticalAlignment="Center"
                       FontWeight="Bold"
                       Text="Latest VS version" />
            <TextBox x:Name="LatestVersionTextBox"
                     Grid.Row="1"
                     Grid.Column="1"
                     MinWidth="200"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Stretch"
                     Background="{StaticResource Dialog_TextBox_Background_Brush}"
                     BorderBrush="{StaticResource Dialog_TextBox_Border_Brush}"
                     SelectionBrush="{StaticResource Dialog_TextBox_Selection_Brush}"
                     SelectionTextBrush="{StaticResource Dialog_TextBox_SelectionText_Brush}"
                     CaretBrush="{StaticResource Dialog_TextBox_Caret_Brush}" />
        </Grid>

        <Border Grid.Row="2"
                BorderBrush="{StaticResource Panel_Secondary_Background_Brush}"
                BorderThickness="1"
                CornerRadius="4"
                Padding="12"
                Background="{StaticResource Panel_Secondary_Background_Brush}">
            <ScrollViewer VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Auto"
                          Background="{StaticResource Panel_Secondary_Background_Brush}">
                <TextBox x:Name="ResultsTextBox"
                         FontFamily="Consolas"
                         FontSize="13"
                         AcceptsReturn="True"
                         AcceptsTab="True"
                         TextWrapping="NoWrap"
                         IsReadOnly="True"
                         BorderThickness="0"
                         Background="Transparent"
                         Foreground="{StaticResource Text_Primary_Brush}" />
            </ScrollViewer>
        </Border>

        <Grid Grid.Row="3" Margin="0,16,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock x:Name="StatusTextBlock"
                       Grid.Column="0"
                       VerticalAlignment="Center"
                       Foreground="{StaticResource Text_Emphasis_Brush}"
                       Text="Ready." />

            <StackPanel Grid.Column="1"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <Button x:Name="RunButton"
                        Width="120"
                        Margin="0,0,12,0"
                        Content="Run review"
                        IsDefault="True"
                        Click="RunButton_OnClick" />
                <Button x:Name="CopyJsonButton"
                        Width="120"
                        Margin="0,0,12,0"
                        Content="Copy JSON"
                        IsEnabled="False"
                        Click="CopyJsonButton_OnClick" />
                <Button Width="120"
                        Content="Close"
                        IsCancel="True" />
            </StackPanel>
        </Grid>
    </Grid>
</Window>
