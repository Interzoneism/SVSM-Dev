<Window x:Class="VintageStoryModManager.Views.BulkCompatibilityPromptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Simple VS Manager"
        WindowStartupLocation="CenterOwner"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Background="{StaticResource IMM.WindowBackgroundBrush}">
    <Grid Margin="20" MinWidth="360" Background="{StaticResource IMM.SurfaceBrush}">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ScrollViewer VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Background="{StaticResource IMM.SurfaceAltBrush}">
            <TextBlock x:Name="MessageTextBlock"
                       TextWrapping="Wrap"
                       Margin="0"
                       MaxWidth="440"
                       Foreground="{StaticResource IMM.ForegroundBrush}" />
        </ScrollViewer>

        <StackPanel Grid.Row="1" Margin="0,20,0,0">
            <Button x:Name="InstallLatestButton"
                    Click="InstallLatestButton_OnClick"
                    Margin="0,0,0,8"
                    HorizontalAlignment="Stretch" />
            <Button x:Name="InstallLatestAllButton"
                    Click="InstallLatestAllButton_OnClick"
                    Margin="0,0,0,8"
                    HorizontalAlignment="Stretch" />
            <Button x:Name="InstallCompatibleButton"
                    Click="InstallCompatibleButton_OnClick"
                    Margin="0,0,0,8"
                    HorizontalAlignment="Stretch"
                    Visibility="Collapsed" />
            <Button x:Name="InstallCompatibleAllButton"
                    Click="InstallCompatibleAllButton_OnClick"
                    Margin="0,0,0,8"
                    HorizontalAlignment="Stretch"
                    Visibility="Collapsed" />
            <Separator Margin="0,4,0,12" Background="{StaticResource IMM.BorderBrush}" />
            <Button x:Name="SkipButton"
                    Click="SkipButton_OnClick"
                    Margin="0,0,0,8"
                    HorizontalAlignment="Stretch" />
            <Button x:Name="CancelButton"
                    Click="CancelButton_OnClick"
                    HorizontalAlignment="Stretch"
                    IsCancel="True" />
        </StackPanel>
    </Grid>
</Window>
