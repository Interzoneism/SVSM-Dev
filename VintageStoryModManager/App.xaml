<Application x:Class="VintageStoryModManager.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             xmlns:behaviors="clr-namespace:VintageStoryModManager.Behaviors"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemeResources />
                <ui:XamlControlsResources />
            </ResourceDictionary.MergedDictionaries>

            <!-- Subtle eased wheel scrolling everywhere -->
            <Style TargetType="ScrollViewer">
                <Setter Property="behaviors:SmoothScrollBehavior.IsEnabled" Value="True"/>
                <Setter Property="CanContentScroll" Value="False"/>
            </Style>
            
        </ResourceDictionary>
    </Application.Resources>
</Application>
