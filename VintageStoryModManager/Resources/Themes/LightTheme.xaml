<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:options="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options">
    <!-- Base color palette for the default light theme -->
    <Color x:Key="IMM.AccentColor">#FF4C8BF5</Color>
    <Color x:Key="IMM.SurfaceColor">#FFF6F8FB</Color>
    <Color x:Key="IMM.SurfaceAltColor">#FFEFF3F9</Color>
    <Color x:Key="IMM.DataGridBackgroundColor">#FFFFFFFF</Color>
    <Color x:Key="IMM.NewDataGridBackground">#FFFFFFFF</Color>
    <Color x:Key="IMM.RowsAndCards">#FFFFFFFF</Color>
    <Color x:Key="IMM.MenuBackgroundColor">#FFF6F8FB</Color>
    <Color x:Key="IMM.BorderColor">#FFCAD7EB</Color>
    <Color x:Key="IMM.WindowBorderColor">#FFCAD7EB</Color>
    <Color x:Key="IMM.RowBorderColor">#FF8EA0C0</Color>
    <Color x:Key="IMM.BorderHoverColor">#FF7AA6F9</Color>
    <Color x:Key="IMM.ButtonBackgroundColor">#FFF9FBFF</Color>
    <Color x:Key="IMM.ButtonHoverColor">#FFE7F0FF</Color>
    <Color x:Key="IMM.ButtonPressedColor">#FFD5E3FF</Color>
    <Color x:Key="IMM.ButtonDisabledColor">#FFEEF1F6</Color>
    <Color x:Key="IMM.ButtonBorderColor">#FFCAD7EB</Color>
    <Color x:Key="IMM.ToggleOffColor">#FFC7D1E5</Color>
    <Color x:Key="IMM.ToggleThumbColor">#FFFFFFFF</Color>
    <Color x:Key="IMM.ToggleDisabledColor">#FFE2E6F0</Color>
    <Color x:Key="IMM.ToggleDisabledThumbColor">#FFF4F6FB</Color>
    <Color x:Key="IMM.PlaceholderForegroundColor">#661C2635</Color>
    <Color x:Key="IMM.ForegroundColor">#FF1C2635</Color>
    <Color x:Key="IMM.ImportantForegroundColor">#FF0F3B76</Color>
    <Color x:Key="IMM.SelectionForegroundColor">#FF0F3B76</Color>
    <Color x:Key="IMM.LinkForegroundColor">#FF1552B6</Color>
    <Color x:Key="IMM.SuccessColor">#FF79C46E</Color>
    <Color x:Key="IMM.RowHoverColor">#FFE7F0FF</Color>
    <Color x:Key="IMM.RowSelectionColor">#334C8BF5</Color>
    <Color x:Key="IMM.ScrollBarThumbColor">#FFCAD7EB</Color>
    <Color x:Key="IMM.SearchBoxBackgroundColor">#FFFFFFFF</Color>
    <Color x:Key="IMM.TagBackgroundColor">#FFE5EDFF</Color>
    <Color x:Key="IMM.TagBorderColor">#FFB3C7FF</Color>
    <Color x:Key="IMM.DataGridHeaderColor">#FFEFF3F9</Color>
    <Color x:Key="IMM.DropdownGlyphColor">#FF1C2635</Color>

    <LinearGradientBrush x:Key="DVS.BorderDepth"
                         StartPoint="0,0"
                         EndPoint="1,1"
                         MappingMode="RelativeToBoundingBox">
        <GradientStop Color="{StaticResource IMM.ButtonHoverColor}" Offset="0" />
        <GradientStop Color="{StaticResource IMM.ButtonBorderColor}" Offset="1" />
    </LinearGradientBrush>

    <SolidColorBrush x:Key="IMM.AccentBrush" Color="{StaticResource IMM.AccentColor}" />
    <SolidColorBrush x:Key="IMM.SurfaceBrush" Color="{StaticResource IMM.SurfaceColor}" />
    <SolidColorBrush x:Key="IMM.SurfaceAltBrush" Color="{StaticResource IMM.SurfaceAltColor}" />
    <SolidColorBrush x:Key="IMM.DataGridBackgroundBrush" Color="{StaticResource IMM.DataGridBackgroundColor}" />
    <SolidColorBrush x:Key="IMM.NewDataGridBackgroundBrush" Color="{StaticResource IMM.NewDataGridBackground}" />
    <SolidColorBrush x:Key="IMM.RowsAndCardsBrush" Color="{StaticResource IMM.RowsAndCards}" />
    <Color x:Key="IMM.InputBackgroundColor">#FFFFFFFF</Color>
    <SolidColorBrush x:Key="IMM.MenuBackgroundBrush" Color="{StaticResource IMM.MenuBackgroundColor}" />
    <SolidColorBrush x:Key="IMM.BorderBrush" options:Freeze="False" Color="{StaticResource IMM.BorderColor}" />
    <SolidColorBrush x:Key="IMM.WindowBorderBrush" Color="{StaticResource IMM.WindowBorderColor}" />
    <SolidColorBrush x:Key="IMM.RowBorderBrush" Color="{StaticResource IMM.RowBorderColor}" />
    <SolidColorBrush x:Key="IMM.BorderHoverBrush" Color="{StaticResource IMM.BorderHoverColor}" />
    <SolidColorBrush x:Key="IMM.ButtonBackgroundBrush" options:Freeze="False" Color="{StaticResource IMM.ButtonBackgroundColor}" />
    <SolidColorBrush x:Key="IMM.ButtonHoverBrush" Color="{StaticResource IMM.ButtonHoverColor}" />
    <SolidColorBrush x:Key="IMM.ButtonPressedBrush" Color="{StaticResource IMM.ButtonPressedColor}" />
    <SolidColorBrush x:Key="IMM.ButtonDisabledBrush" Color="{StaticResource IMM.ButtonDisabledColor}" />
    <SolidColorBrush x:Key="IMM.ToggleOffBrush" Color="{StaticResource IMM.ToggleOffColor}" />
    <SolidColorBrush x:Key="IMM.ToggleThumbBrush" Color="{StaticResource IMM.ToggleThumbColor}" />
    <SolidColorBrush x:Key="IMM.ToggleDisabledBrush" Color="{StaticResource IMM.ToggleDisabledColor}" />
    <SolidColorBrush x:Key="IMM.ToggleDisabledThumbBrush" Color="{StaticResource IMM.ToggleDisabledThumbColor}" />
    <SolidColorBrush x:Key="IMM.PlaceholderForegroundBrush" Color="{StaticResource IMM.PlaceholderForegroundColor}" />
    <SolidColorBrush x:Key="IMM.ForegroundBrush" Color="{StaticResource IMM.ForegroundColor}" />
    <SolidColorBrush x:Key="IMM.BodyForegroundBrush" Color="{StaticResource IMM.ForegroundColor}" />
    <SolidColorBrush x:Key="IMM.ImportantForegroundBrush" Color="{StaticResource IMM.ImportantForegroundColor}" />
    <SolidColorBrush x:Key="IMM.SelectionForegroundBrush" Color="{StaticResource IMM.SelectionForegroundColor}" />
    <SolidColorBrush x:Key="IMM.LinkForegroundBrush" Color="{StaticResource IMM.LinkForegroundColor}" />
    <SolidColorBrush x:Key="IMM.SuccessBrush" Color="{StaticResource IMM.SuccessColor}" />
    <SolidColorBrush x:Key="IMM.RowHoverBrush" Color="{StaticResource IMM.RowHoverColor}" />
    <SolidColorBrush x:Key="IMM.RowSelectionBrush" Color="{StaticResource IMM.RowSelectionColor}" />
    <SolidColorBrush x:Key="IMM.ScrollBarThumbBrush" Color="{StaticResource IMM.ScrollBarThumbColor}" />
    <SolidColorBrush x:Key="IMM.SearchBoxBackgroundBrush" Color="{StaticResource IMM.SearchBoxBackgroundColor}" />
    <SolidColorBrush x:Key="IMM.TagBackgroundBrush" Color="{StaticResource IMM.TagBackgroundColor}" />
    <SolidColorBrush x:Key="IMM.TagBorderBrush" Color="{StaticResource IMM.TagBorderColor}" />
    <SolidColorBrush x:Key="IMM.DataGridHeaderBrush" Color="{StaticResource IMM.DataGridHeaderColor}" />
    <SolidColorBrush x:Key="IMM.DropdownGlyphBrush" Color="{StaticResource IMM.DropdownGlyphColor}" />
    <SolidColorBrush x:Key="IMM.InputBackgroundBrush" Color="{StaticResource IMM.InputBackgroundColor}" />
    <SolidColorBrush x:Key="IMM.WindowBackgroundBrush" Color="{StaticResource IMM.SurfaceColor}" />
    <SolidColorBrush x:Key="IMM.AlertOverlayBrush" Color="{StaticResource IMM.SelectionForegroundColor}" Opacity="0.4" />
    <SolidColorBrush x:Key="IMM.SuccessOverlayBrush" Color="{StaticResource IMM.SuccessColor}" Opacity="0.7" />
    <SolidColorBrush x:Key="IMM.SubtleForegroundBrush" Color="{StaticResource IMM.PlaceholderForegroundColor}" />
    <SolidColorBrush x:Key="IMM.ErrorBrush" Color="#FFE06B6B" />
</ResourceDictionary>
