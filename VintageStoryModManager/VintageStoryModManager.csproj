<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<OutputType>WinExe</OutputType>
		<TargetFramework>net8.0</TargetFramework>
		<Nullable>enable</Nullable>
		<ImplicitUsings>enable</ImplicitUsings>
		<ApplicationManifest>app.manifest</ApplicationManifest>
		<ApplicationIcon>SVSM.ico</ApplicationIcon>
		<IncludeAllContentForSelfExtract>true</IncludeAllContentForSelfExtract>
		<AvaloniaUseCompiledBindingsByDefault>true</AvaloniaUseCompiledBindingsByDefault>

		<!-- What Windows/Task Manager shows -->
		<FileDescription>Simple VS Manager</FileDescription>   <!-- Task Manager "Name" (File description) -->
		<Product>Simple VS Manager</Product>                   <!-- Product name -->
		<Company>Interzone</Company>
		<Description>Portable, user-friendly Vintage Story mod manager.</Description>
		<AssemblyTitle>Simple VS Manager</AssemblyTitle>       <!-- Also good to set -->

		<!-- File name on disk (the .exe base name) -->
		<AssemblyName>VintageStoryModManager</AssemblyName>

		<!-- Versions -->
		<Version>$(AppVersion)</Version>                               <!-- Product version -->
		<FileVersion>$(AppFileVersion)</FileVersion>                   <!-- File version (Details tab) -->
		<InformationalVersion>$(AppVersion)</InformationalVersion>     <!-- About box/semver -->
	</PropertyGroup>
	<ItemGroup>
		<None Remove="soil.png" />
		<None Remove="Views\soilcorrect.png" />
	</ItemGroup>

	<!-- Exclude old WPF files from compilation (keep for reference) -->
	<ItemGroup>
		<Compile Remove="App.xaml.cs" />
		<Compile Remove="Views\**\*.xaml.cs" />
		<Compile Remove="Resources\**\*.xaml.cs" />
		<None Include="App.xaml.cs" />
		<None Include="Views\**\*.xaml.cs" />
		<None Include="Resources\**\*.xaml.cs" />
	</ItemGroup>
	<ItemGroup>
		<None Remove="App.xaml" />
		<None Remove="Views\**\*.xaml" />
		<None Remove="Resources\**\*.xaml" />
		<None Include="App.xaml" />
		<None Include="Views\**\*.xaml" />
		<None Include="Resources\**\*.xaml" />
	</ItemGroup>

	<ItemGroup>
		<AvaloniaResource Include="warning.png" />
		<AvaloniaResource Include="error.png" />
		<AvaloniaResource Include="mod-default.png" />
		<AvaloniaResource Include="Resources\Discord.png" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Avalonia" Version="11.2.1" />
		<PackageReference Include="Avalonia.Desktop" Version="11.2.1" />
		<PackageReference Include="Avalonia.Themes.Fluent" Version="11.2.1" />
		<PackageReference Include="Avalonia.Diagnostics" Version="11.2.1" />
		<PackageReference Include="SukiUI" Version="6.0.0" />
		<PackageReference Include="BenchmarkDotNet" Version="0.15.6" />
		<PackageReference Include="CommunityToolkit.Mvvm" Version="8.4.0" />
		<PackageReference Include="Microsoft.VisualBasic" Version="10.3.0" />
		<PackageReference Include="Microsoft.VisualStudio.DiagnosticsHub.BenchmarkDotNetDiagnosers" Version="18.3.36714.1" />
		<PackageReference Include="HtmlAgilityPack" Version="1.11.61" />
		<PackageReference Include="QuestPDF" Version="2024.3.0" />
		<PackageReference Include="UglyToad.PdfPig" Version="1.7.0-custom-5" />
		<PackageReference Include="YamlDotNet" Version="13.7.1" />
	</ItemGroup>

	<ItemGroup>
		<Folder Include="Benchmarks\" />
		<Folder Include="ViewModels\" />
	</ItemGroup>

	<ItemGroup>
		<Compile Update="Properties\Settings.Designer.cs">
			<DesignTimeSharedInput>True</DesignTimeSharedInput>
			<AutoGen>True</AutoGen>
			<DependentUpon>Settings.settings</DependentUpon>
		</Compile>
	</ItemGroup>

	<ItemGroup>
		<None Update="Properties\Settings.settings">
			<Generator>SettingsSingleFileGenerator</Generator>
			<LastGenOutput>Settings.Designer.cs</LastGenOutput>
		</None>
	</ItemGroup>
</Project>