<Window x:Class="VintageStoryModManager.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:design="clr-namespace:VintageStoryModManager.Design"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=design:MainWindowDesignData}"
        Title="Vintage Story Mod Manager"
        Height="632" Width="1100"
        MinWidth="900" MinHeight="520"
        PreviewKeyDown="Window_OnPreviewKeyDown"
        PreviewKeyUp="Window_OnPreviewKeyUp"
        Background="{StaticResource IMM.SurfaceBrush}">

    <Grid Background="{StaticResource IMM.SurfaceAltBrush}">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" MinHeight="55" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Menu IsMainMenu="True"
              Margin="0,6,0,9"
              Background="{StaticResource IMM.SurfaceBrush}"
              BorderThickness="0"
              AutomationProperties.AutomationId="MainMenu">
            <MenuItem Header="_File" Height="30" AutomationProperties.AutomationId="FileMenu">
                <MenuItem Header="_Refresh Mods" Height="30" Click="RefreshModsMenuItem_OnClick" AutomationProperties.AutomationId="RefreshModsMenuItem" />
                <Separator />
                <MenuItem Header="Set _Data Folder..." Height="30" Click="SelectDataFolderMenuItem_OnClick" AutomationProperties.AutomationId="SetDataFolderMenuItem" />
                <MenuItem Header="Set _Game Folder..." Height="30" Click="SelectGameFolderMenuItem_OnClick" AutomationProperties.AutomationId="SetGameFolderMenuItem" />
                <Separator />
                <MenuItem Header="E_xit" Height="30" Click="ExitMenuItem_OnClick" AutomationProperties.AutomationId="ExitMenuItem"/>
            </MenuItem>
            <MenuItem Header="_Help" Height="30" AutomationProperties.AutomationId="HelpMenu">
                <MenuItem Header="_About" Height="30" AutomationProperties.AutomationId="AboutMenuItem" />
            </MenuItem>
        </Menu>

        <DataGrid Grid.Row="1"
                  Margin="16,0,16,0"
                  ItemsSource="{Binding ModsView}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  IsReadOnly="False"
                  AutomationProperties.AutomationId="ModsDataGrid"
                  EnableRowVirtualization="True"
                  GridLinesVisibility="Horizontal"
                  SelectionUnit="FullRow"
                  SelectionMode="Single"
                  RowHeaderWidth="0"
                  IsSynchronizedWithCurrentItem="True" MinColumnWidth="20"
                  SelectionChanged="ModsDataGrid_OnSelectionChanged" Foreground="Black"
                  PreviewMouseWheel="ModsDataGrid_OnPreviewMouseWheel"
                  Background="White"
                  RowBackground="Transparent"
                  AlternatingRowBackground="#0F1A5AA9"
                  HorizontalGridLinesBrush="{StaticResource IMM.BorderBrush}"
                  VerticalGridLinesBrush="{StaticResource IMM.BorderBrush}"
                  ui:ControlHelper.CornerRadius="10"
                  BorderThickness="1">
            <DataGrid.Effect>
                <DropShadowEffect BlurRadius="18"
                                   Direction="270"
                                   ShadowDepth="6"
                                   Opacity="0.18"
                                   Color="#33000000" />
            </DataGrid.Effect>
            <DataGrid.Resources>
                <Style TargetType="TextBlock">
                    <Setter Property="TextWrapping" Value="Wrap" />
                </Style>
                <Style TargetType="DataGridCell">
                    <Setter Property="Background" Value="Transparent" />
                    <Setter Property="BorderBrush" Value="{StaticResource IMM.BorderBrush}" />
                    <Setter Property="BorderThickness" Value="0,0,0,1" />
                    <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                    <Setter Property="Padding" Value="8,6" />
                </Style>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="{StaticResource IMM.SurfaceAltBrush}" />
                    <Setter Property="BorderBrush" Value="{StaticResource IMM.BorderBrush}" />
                    <Setter Property="BorderThickness" Value="0,0,0,1" />
                    <Setter Property="Foreground" Value="{StaticResource IMM.ForegroundBrush}" />
                    <Setter Property="Padding" Value="12,10" />
                    <Setter Property="FontWeight" Value="SemiBold" />
                    <Setter Property="HorizontalContentAlignment" Value="Center" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="DataGridColumnHeader">
                                <Border x:Name="HeaderBorder"
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        Padding="{TemplateBinding Padding}"
                                        SnapsToDevicePixels="True">
                                    <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Trigger.EnterActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <ColorAnimation Storyboard.TargetName="HeaderBorder"
                                                                    Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                                    To="{StaticResource IMM.ButtonHoverColor}"
                                                                    Duration="0:0:0.15">
                                                        <ColorAnimation.EasingFunction>
                                                            <QuadraticEase EasingMode="EaseOut" />
                                                        </ColorAnimation.EasingFunction>
                                                    </ColorAnimation>
                                                    <ColorAnimation Storyboard.TargetName="HeaderBorder"
                                                                    Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
                                                                    To="{StaticResource IMM.BorderHoverColor}"
                                                                    Duration="0:0:0.15">
                                                        <ColorAnimation.EasingFunction>
                                                            <QuadraticEase EasingMode="EaseOut" />
                                                        </ColorAnimation.EasingFunction>
                                                    </ColorAnimation>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </Trigger.EnterActions>
                                        <Trigger.ExitActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <ColorAnimation Storyboard.TargetName="HeaderBorder"
                                                                    Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                                    To="{StaticResource IMM.SurfaceAltColor}"
                                                                    Duration="0:0:0.15">
                                                        <ColorAnimation.EasingFunction>
                                                            <QuadraticEase EasingMode="EaseOut" />
                                                        </ColorAnimation.EasingFunction>
                                                    </ColorAnimation>
                                                    <ColorAnimation Storyboard.TargetName="HeaderBorder"
                                                                    Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
                                                                    To="{StaticResource IMM.BorderColor}"
                                                                    Duration="0:0:0.15">
                                                        <ColorAnimation.EasingFunction>
                                                            <QuadraticEase EasingMode="EaseOut" />
                                                        </ColorAnimation.EasingFunction>
                                                    </ColorAnimation>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </Trigger.ExitActions>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </DataGrid.Resources>
            <DataGrid.BorderBrush>
                <SolidColorBrush Color="{StaticResource IMM.BorderColor}" />
            </DataGrid.BorderBrush>
            <DataGrid.RowHeaderStyle>
                <Style/>
            </DataGrid.RowHeaderStyle>
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="Background" Value="Transparent" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="DataGridRow">
                                <Border x:Name="RowBorder"
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        SnapsToDevicePixels="True">
                                    <Grid>
                                        <Border x:Name="HoverOverlay"
                                                Background="{StaticResource IMM.AccentBrush}"
                                                Opacity="0"
                                                IsHitTestVisible="False"
                                                Panel.ZIndex="-2"
                                                CornerRadius="6"
                                                Margin="4"
                                                HorizontalAlignment="Stretch"
                                                VerticalAlignment="Stretch" />
                                        <Border x:Name="SelectionOverlay"
                                                Background="{StaticResource IMM.AccentBrush}"
                                                Opacity="0"
                                                IsHitTestVisible="False"
                                                Panel.ZIndex="-1"
                                                CornerRadius="6"
                                                Margin="4"
                                                HorizontalAlignment="Stretch"
                                                VerticalAlignment="Stretch" />
                                        <SelectiveScrollingGrid>
                                            <SelectiveScrollingGrid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                            </SelectiveScrollingGrid.ColumnDefinitions>
                                            <SelectiveScrollingGrid.RowDefinitions>
                                                <RowDefinition Height="*" />
                                                <RowDefinition Height="Auto" />
                                            </SelectiveScrollingGrid.RowDefinitions>
                                            <DataGridCellsPresenter Grid.Column="0"
                                                                     SelectiveScrollingGrid.SelectiveScrollingOrientation="Both" />
                                            <DataGridDetailsPresenter Grid.Column="0"
                                                                      Grid.Row="1"
                                                                      SelectiveScrollingGrid.SelectiveScrollingOrientation="Horizontal"
                                                                      Visibility="{TemplateBinding DetailsVisibility}" />
                                        </SelectiveScrollingGrid>
                                    </Grid>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="DetailsVisibility" Value="Visible">
                                        <Setter TargetName="RowBorder" Property="BorderThickness" Value="1,0,1,1" />
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Trigger.EnterActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetName="HoverOverlay"
                                                                     Storyboard.TargetProperty="Opacity"
                                                                     To="0.12"
                                                                     Duration="0:0:0.18">
                                                        <DoubleAnimation.EasingFunction>
                                                            <QuadraticEase EasingMode="EaseOut" />
                                                        </DoubleAnimation.EasingFunction>
                                                    </DoubleAnimation>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </Trigger.EnterActions>
                                        <Trigger.ExitActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetName="HoverOverlay"
                                                                     Storyboard.TargetProperty="Opacity"
                                                                     To="0"
                                                                     Duration="0:0:0.2">
                                                        <DoubleAnimation.EasingFunction>
                                                            <QuadraticEase EasingMode="EaseOut" />
                                                        </DoubleAnimation.EasingFunction>
                                                    </DoubleAnimation>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </Trigger.ExitActions>
                                    </Trigger>
                                    <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                        <DataTrigger.EnterActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetName="SelectionOverlay"
                                                                     Storyboard.TargetProperty="Opacity"
                                                                     To="0.22"
                                                                     Duration="0:0:0.18">
                                                        <DoubleAnimation.EasingFunction>
                                                            <QuadraticEase EasingMode="EaseOut" />
                                                        </DoubleAnimation.EasingFunction>
                                                    </DoubleAnimation>
                                                    <DoubleAnimation Storyboard.TargetName="HoverOverlay"
                                                                     Storyboard.TargetProperty="Opacity"
                                                                     To="0"
                                                                     Duration="0:0:0.1" />
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </DataTrigger.EnterActions>
                                        <DataTrigger.ExitActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetName="SelectionOverlay"
                                                                     Storyboard.TargetProperty="Opacity"
                                                                     To="0"
                                                                     Duration="0:0:0.22">
                                                        <DoubleAnimation.EasingFunction>
                                                            <QuadraticEase EasingMode="EaseOut" />
                                                        </DoubleAnimation.EasingFunction>
                                                    </DoubleAnimation>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </DataTrigger.ExitActions>
                                    </DataTrigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <EventSetter Event="PreviewMouseLeftButtonDown" Handler="ModsDataGridRow_OnPreviewMouseLeftButtonDown" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding HasErrors}" Value="True">
                            <Setter Property="Background" Value="#FFFFE5E5" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding HasActivationError}" Value="True">
                            <Setter Property="Background" Value="#22F5D67B" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>
            <DataGrid.Columns>
                <DataGridTemplateColumn x:Name="ActiveColumn" Header="Active" SortMemberPath="IsActive" Width="90" MinWidth="85">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Grid HorizontalAlignment="Center">
                                <ui:ToggleSwitch IsOn="{Binding IsActive, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 HorizontalAlignment="Center"
                                 IsEnabled="{Binding CanToggle}"
                                 Toggled="ActiveToggle_OnToggled"
                                 Margin="20"
                                 OnContent="{x:Null}"
                                 OffContent="{x:Null}"
                                 AutomationProperties.AutomationId="{Binding ModId, StringFormat=ModActivationToggle_{0}}"
                                 AutomationProperties.Name="{Binding DisplayName, StringFormat=Toggle Activation for {0}}"/>
                            </Grid>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="Icon" Width="SizeToCells" IsReadOnly="True">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Border Width="60" Height="60"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    ToolTipService.ShowDuration="60000"
                                    ToolTipService.InitialShowDelay="200">
                                <ToolTipService.ToolTip>
                                    <TextBlock Text="{Binding Tooltip}"
                                               FontFamily="Segoe UI"
                                               FontSize="12"
                                               FontWeight="Normal"
                                               TextWrapping="Wrap" />
                                </ToolTipService.ToolTip>
                                <Image Source="{Binding Icon}" Stretch="Uniform" />
                            </Border>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Name" Binding="{Binding DisplayName, Mode=OneWay}" Width="SizeToCells" SortMemberPath="DisplayName" IsReadOnly="True">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="FontFamily" Value="Segoe UI" />
                            <Setter Property="FontWeight" Value="Bold" />
                            <Setter Property="ToolTipService.ShowDuration" Value="60000" />
                            <Setter Property="ToolTipService.InitialShowDelay" Value="200" />
                            <Setter Property="HorizontalAlignment" Value="Stretch" />
                            <Setter Property="VerticalAlignment" Value="Center" />
                            <Setter Property="TextAlignment" Value="Left" />
                            <Setter Property="Margin" Value="15,0,0,0" />
                            <Setter Property="ToolTipService.ToolTip">
                                <Setter.Value>
                                    <TextBlock Text="{Binding Tooltip}"
                                               FontFamily="Segoe UI"
                                               FontSize="12"
                                               FontWeight="Normal"
                                               TextWrapping="Wrap" />
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                    <DataGridTextColumn.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                            <Setter Property="VerticalContentAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.CellStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Version" Binding="{Binding VersionDisplay, Mode=OneWay}" Width="65" IsReadOnly="True" MinWidth="64" />
                <DataGridTextColumn Header="Latest Version" Binding="{Binding LatestDatabaseVersionDisplay, Mode=OneWay}" Width="100" MinWidth="99" IsReadOnly="True" />
                <DataGridTemplateColumn Header="Mod Page" Width="100" IsReadOnly="True">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Padding="6"
                                    Background="{DynamicResource IMM.ButtonBackgroundBrush}"
                                    BorderBrush="{DynamicResource IMM.BorderBrush}"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    ToolTip="{Binding ModDatabasePageUrlDisplay}"
                                    Click="ModDatabasePageButton_OnClick"
                                    AutomationProperties.AutomationId="{Binding ModId, StringFormat=OpenModDatabasePageButton_{0}}"
                                    AutomationProperties.Name="{Binding DisplayName, StringFormat=Open Mod Database Page for {0}}">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding HasModDatabasePageLink}" Value="True">
                                                <Setter Property="Visibility" Value="Visible" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <Image Source="{Binding ModDatabasePageFavicon}" Width="20" Height="20" Stretch="Uniform">
                                        <Image.Style>
                                            <Style TargetType="Image">
                                                <Setter Property="Visibility" Value="Visible" />
                                                <Style.Triggers>
                                                    <Trigger Property="Source" Value="{x:Null}">
                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Image.Style>
                                    </Image>
                                    <TextBlock Text="ModDB Page" Margin="0,0,0,0" />
                                </StackPanel>
                            </Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="Config" Width="100" IsReadOnly="True">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Padding="6"
                                    Background="{DynamicResource IMM.ButtonBackgroundBrush}"
                                    BorderBrush="{DynamicResource IMM.BorderBrush}"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Content="Edit Config"
                                    Click="EditConfigButton_OnClick"
                                    AutomationProperties.AutomationId="{Binding ModId, StringFormat=EditConfigButton_{0}}"
                                    AutomationProperties.Name="{Binding DisplayName, StringFormat=Edit Config for {0}}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="Delete" Width="100" IsReadOnly="True">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Padding="6"
                                    Background="{DynamicResource IMM.ButtonBackgroundBrush}"
                                    BorderBrush="{DynamicResource IMM.BorderBrush}"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Content="Delete"
                                    Click="DeleteModButton_OnClick"
                                    AutomationProperties.AutomationId="{Binding ModId, StringFormat=DeleteModButton_{0}}"
                                    AutomationProperties.Name="{Binding DisplayName, StringFormat=Delete {0}}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Authors" Binding="{Binding AuthorsDisplay, Mode=OneWay}" Width="110" IsReadOnly="True">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextWrapping" Value="Wrap" />
                            <Setter Property="HorizontalAlignment" Value="Stretch" />
                            <Setter Property="VerticalAlignment" Value="Center" />
                            <Setter Property="TextAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                    <DataGridTextColumn.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                            <Setter Property="VerticalContentAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.CellStyle>
                </DataGridTextColumn>
                <DataGridTemplateColumn Header="Status" Width="100" IsReadOnly="True">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock FontFamily="Segoe Fluent Icons"
                                       FontSize="30"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       TextAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="{ui:ThemeResource SystemControlForegroundBaseHighBrush}" />
                                        <Setter Property="Text" Value="" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding StatusText}" Value="Error">
                                                <Setter Property="Foreground" Value="#FFD13438" />
                                                <Setter Property="Text" Value="&#xEA39;" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding StatusText}" Value="Warning">
                                                <Setter Property="Foreground" Value="#FFE17E00" />
                                                <Setter Property="Text" Value="&#xE7BA;" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                    <DataGridTemplateColumn.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="BorderBrush" Value="Transparent" />
                            <Setter Property="BorderThickness" Value="0" />
                            <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                            <Setter Property="ToolTip" Value="{Binding StatusDetails}" />
                        </Style>
                    </DataGridTemplateColumn.CellStyle>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>


        <Border Grid.Row="2"
                Padding="16"
                Background="{StaticResource IMM.SurfaceBrush}"
                BorderBrush="{StaticResource IMM.BorderBrush}"
                BorderThickness="1"
                CornerRadius="8"
                VerticalAlignment="Center"
                Height="56">
            <Border.Effect>
                <DropShadowEffect BlurRadius="12" Direction="270" ShadowDepth="4" Opacity="0.14" Color="#33000000" />
            </Border.Effect>
            <TextBlock Text="{Binding StatusMessage}" TextWrapping="Wrap" Margin="-6,-6,6,6">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Foreground" Value="{ui:ThemeResource SystemControlForegroundBaseMediumBrush}" />
                        <Setter Property="Visibility" Value="Collapsed" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding HasStatusMessage}" Value="True">
                                <Setter Property="Visibility" Value="Visible" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding IsErrorStatus}" Value="True">
                                <Setter Property="Foreground" Value="#FFD13438" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
        </Border>
        <Button Content="Launch Vintage Story" Margin="891,0,0,0" Grid.Row="2" Width="159" Background="{DynamicResource IMM.ButtonBackgroundBrush}" BorderBrush="{DynamicResource IMM.BorderBrush}" Click="LaunchGameButton_OnClick" Height="32" AutomationProperties.AutomationId="LaunchGameButton"/>
        <Button Content="Open Mod Folder" Margin="755,0,0,0" Grid.Row="2" Width="131" Background="{DynamicResource IMM.ButtonBackgroundBrush}" BorderBrush="{DynamicResource IMM.BorderBrush}" Click="OpenModFolderButton_OnClick" Height="32" AutomationProperties.AutomationId="OpenModFolderButton"/>
        <Button Content="Open Config Folder" Margin="604,0,0,0" Grid.Row="2" Width="146" Background="{DynamicResource IMM.ButtonBackgroundBrush}" BorderBrush="{DynamicResource IMM.BorderBrush}" Click="OpenConfigFolderButton_OnClick" Height="32" AutomationProperties.AutomationId="OpenConfigFolderButton"/>
        <Button Content="Open Logs Folder" Margin="453,0,0,0" Grid.Row="2" Width="146" Background="{DynamicResource IMM.ButtonBackgroundBrush}" BorderBrush="{DynamicResource IMM.BorderBrush}" Click="OpenLogsFolderButton_OnClick" Height="32" AutomationProperties.AutomationId="OpenLogsFolderButton"/>
        <ComboBox x:Name="PresetComboBox" Margin="755,0,0,0" VerticalAlignment="Center" Width="295"
                  DisplayMemberPath="Name"
                  SelectionChanged="PresetComboBox_OnSelectionChanged"
                  DropDownClosed="PresetComboBox_OnDropDownClosed" Height="32" AutomationProperties.AutomationId="PresetComboBox"/>
        <Button x:Name="SavePresetButton" Content="Save Preset" Margin="635,0,0,0" Width="115" Background="{DynamicResource IMM.ButtonBackgroundBrush}" BorderBrush="{DynamicResource IMM.BorderBrush}"
                Click="SavePresetButton_OnClick"
                MouseEnter="SavePresetButton_OnMouseEnter"
                MouseLeave="SavePresetButton_OnMouseLeave" Height="30" AutomationProperties.AutomationId="SavePresetButton"/>
    </Grid>
</Window>
